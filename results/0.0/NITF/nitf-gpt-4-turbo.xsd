<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/nitf"
           xmlns:tns="http://example.com/nitf">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:element name="NITF" dfdl:lengthKind="delimited">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="FileHeader" type="tns:FileHeaderType"/>
        <xs:element name="ImageSegments" type="tns:ImageSegmentsType" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="GraphicsSegments" type="tns:GraphicsSegmentsType" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="TextSegments" type="tns:TextSegmentsType" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="DataExtensionSegments" type="tns:DataExtensionSegmentsType" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="ReservedExtensionSegments" type="tns:ReservedExtensionSegmentsType" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="FileHeaderType">
    <xs:sequence>
      <xs:element name="FileType" type="xs:string" dfdl:length="10"/>
      <xs:element name="ComplexityLevel" type="xs:string" dfdl:length="2"/>
      <xs:element name="StandardVersion" type="xs:string" dfdl:length="4"/>
      <xs:element name="OriginatingStationID" type="xs:string" dfdl:length="10"/>
      <xs:element name="FileDateTime" type="xs:string" dfdl:length="14"/>
      <xs:element name="FileTitle" type="xs:string" dfdl:length="80"/>
      <xs:element name="FileSecurity" type="tns:SecurityClassificationType"/>
      <xs:element name="FileCopyNumber" type="xs:string" dfdl:length="5"/>
      <xs:element name="FileNumberOfCopies" type="xs:string" dfdl:length="5"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SecurityClassificationType">
    <xs:sequence>
      <xs:element name="SecurityClass" type="xs:string" dfdl:length="1"/>
      <xs:element name="SecuritySystem" type="xs:string" dfdl:length="2"/>
      <xs:element name="Codewords" type="xs:string" dfdl:length="11"/>
      <xs:element name="ControlAndHandling" type="xs:string" dfdl:length="2"/>
      <xs:element name="ReleasingInstructions" type="xs:string" dfdl:length="20"/>
      <xs:element name="DeclassificationType" type="xs:string" dfdl:length="2"/>
      <xs:element name="DeclassificationDate" type="xs:string" dfdl:length="8"/>
      <xs:element name="DeclassificationExemption" type="xs:string" dfdl:length="4"/>
      <xs:element name="Downgrade" type="xs:string" dfdl:length="1"/>
      <xs:element name="DowngradeDate" type="xs:string" dfdl:length="8"/>
      <xs:element name="ClassificationText" type="xs:string" dfdl:length="43"/>
      <xs:element name="ClassificationAuthorityType" type="xs:string" dfdl:length="1"/>
      <xs:element name="ClassificationAuthority" type="xs:string" dfdl:length="40"/>
      <xs:element name="ClassificationReason" type="xs:string" dfdl:length="1"/>
      <xs:element name="SecuritySourceDate" type="xs:string" dfdl:length="8"/>
      <xs:element name="SecurityControlNumber" type="xs:string" dfdl:length="15"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ImageSegmentsType">
    <xs:sequence>
      <xs:element name="ImageSubheader" type="tns:ImageSubheaderType"/>
      <xs:element name="ImageData" type="xs:base64Binary" dfdl:lengthKind="explicit" dfdl:length="{../ImageSubheader/ImageDataLength}"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ImageSubheaderType">
    <xs:sequence>
      <xs:element name="ImageID" type="xs:string" dfdl:length="10"/>
      <xs:element name="DateTime" type="xs:string" dfdl:length="14"/>
      <xs:element name="TargetID" type="xs:string" dfdl:length="17"/>
      <xs:element name="Title" type="xs:string" dfdl:length="80"/>
      <xs:element name="SecurityClass" type="tns:SecurityClassificationType"/>
      <xs:element name="Encryption" type="xs:string" dfdl:length="1"/>
      <xs:element name="ImageFormat" type="xs:string" dfdl:length="3"/>
      <xs:element name="ImageDataLength" type="xs:int" dfdl:length="12"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Additional segment types would be defined similarly -->

</xs:schema>