<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:tiff="http://example.com/tiff"
    targetNamespace="http://example.com/tiff"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                        lengthKind="implicit"
                        encoding="x-binary"
                        byteOrder="littleEndian"
                        binaryNumberRep="binary"
                        representation="binary"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="tiffFile">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="header" type="tiff:HeaderType"/>
                <xs:element name="ifd" type="tiff:IFDType" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="HeaderType">
        <xs:sequence>
            <xs:element name="byteOrder" type="xs:hexBinary" dfdl:length="2" dfdl:lengthKind="explicit"/>
            <xs:element name="magic" type="xs:unsignedShort" dfdl:lengthKind="implicit"/>
            <xs:element name="ifdOffset" type="xs:unsignedInt" dfdl:lengthKind="implicit"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="IFDType">
        <xs:sequence>
            <xs:element name="numEntries" type="xs:unsignedShort" dfdl:lengthKind="implicit"/>
            <xs:element name="entry" type="tiff:IFDEntryType" maxOccurs="unbounded" 
                       dfdl:occursCount="{ ../numEntries }"/>
            <xs:element name="nextIFDOffset" type="xs:unsignedInt" dfdl:lengthKind="implicit"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="IFDEntryType">
        <xs:sequence>
            <xs:element name="tag" type="xs:unsignedShort" dfdl:lengthKind="implicit"/>
            <xs:element name="type" type="xs:unsignedShort" dfdl:lengthKind="implicit"/>
            <xs:element name="count" type="xs:unsignedInt" dfdl:lengthKind="implicit"/>
            <xs:element name="valueOffset" type="xs:unsignedInt" dfdl:lengthKind="implicit"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>