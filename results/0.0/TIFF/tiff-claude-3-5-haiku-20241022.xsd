<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/tiff"
           xmlns:tiff="http://example.com/tiff">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        separator=""
        initiator=""
        terminator=""
        leadingSkip="0"
        trailingSkip="0"
        textTrimKind="none"
        initiatedContent="no"
        encoding="UTF-8"
        byteOrder="bigEndian"
        representation="binary"
        occursCountKind="parsed"
        textNumberRep="standard"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="TIFFImage">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" type="tiff:HeaderType"/>
        <xs:element name="ImageData" type="tiff:ImageDataType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="ByteOrder" type="xs:string" 
        dfdl:lengthKind="explicit" 
        dfdl:length="2"/>
      <xs:element name="Version" type="xs:unsignedShort" 
        dfdl:lengthKind="explicit" 
        dfdl:length="2"/>
      <xs:element name="IFDOffset" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ImageDataType">
    <xs:sequence>
      <xs:element name="Width" type="xs:unsignedInt"/>
      <xs:element name="Height" type="xs:unsignedInt"/>
      <xs:element name="PixelData" type="xs:hexBinary"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>