<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/mqtt"
           xmlns:mqtt="http://example.com/mqtt">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        separator=""
        initiator=""
        terminator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        bitOrder="mostSignificantBitFirst"
        representation="binary"
        occursCountKind="parsed"
        textNumberPattern="#0"
        textNumberCheckPolicy="strict"
        textZonedSignStyle="asciiStandardSign"
        escapeSchemeRef=""
        alignment="1"
        alignmentUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="MQTTMessage">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="FixedHeader" type="mqtt:FixedHeaderType"/>
        <xs:element name="VariableHeader" type="mqtt:VariableHeaderType" minOccurs="0"/>
        <xs:element name="Payload" type="mqtt:PayloadType" minOccurs="0"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="FixedHeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="PacketType" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthBits="4"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Flags" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthBits="4"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="RemainingLength" type="mqtt:VariableLengthInteger"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="VariableHeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="ProtocolName" type="xs:string">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthBits="48" encoding="UTF-8"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="ProtocolLevel" type="xs:unsignedByte"/>
      <xs:element name="ConnectFlags" type="xs:unsignedByte" minOccurs="0"/>
      <xs:element name="KeepAlive" type="xs:unsignedShort" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PayloadType">
    <xs:sequence dfdl:separator="">
      <xs:element name="ClientID" type="xs:string" minOccurs="0">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="delimited" lengthUnits="bytes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="VariableLengthInteger">
    <xs:sequence dfdl:separator="">
      <xs:element name="EncodedByte" type="xs:unsignedByte" maxOccurs="4">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthBits="8"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

</xs:schema>