<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/jpeg"
           xmlns:tns="http://example.com/jpeg">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:element name="JPEGFile" dfdl:lengthKind="delimited">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="SOI" type="xs:hexBinary" dfdl:length="2" dfdl:initiator="0xFFD8"/>
        <xs:element name="segments" type="tns:Segment" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="EOI" type="xs:hexBinary" dfdl:length="2" dfdl:terminator="0xFFD9"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="Segment">
    <xs:sequence>
      <xs:element name="marker" type="xs:hexBinary" dfdl:length="2"/>
      <xs:element name="length" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="data" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ . - 2 }"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>