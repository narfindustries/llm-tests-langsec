<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/gzip_gemini"
           xmlns="http://example.org/gzip_gemini"
           elementFormDefault="qualified">

  <xs:element name="gzip_gemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="HeaderType" dfdl:lengthKind="explicit" dfdl:length="10"/>
        <xs:element name="data" type="xs:string" dfdl:lengthKind="implicit" dfdl:occursCountKind="unbounded"/>
        <xs:element name="footer" type="FooterType" dfdl:lengthKind="explicit" dfdl:length="5"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occursCountKind="exactlyOne"/>
    </xs:complexType>
    <dfdl:format ref="gzipFormat"/>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="id" type="xs:string" dfdl:length="5"/>
      <xs:element name="timestamp" type="xs:dateTime" dfdl:length="5"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FooterType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="checksum" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <dfdl:format name="gzipFormat" dfdl:encoding="UTF-8" dfdl:compression="gzip"/>

</xs:schema>
