<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/gzip"
           xmlns:tns="http://example.com/gzip">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:defaultFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="gzipFile">
    <xs:sequence>
      <xs:element name="id1" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="id2" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="compressionMethod" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="flags" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="mtime" type="xs:int" dfdl:length="4" dfdl:textNumberRep="binary"/>
      <xs:element name="extraFlags" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="os" type="xs:byte" dfdl:length="1" dfdl:textNumberRep="binary"/>
      <xs:element name="extra" minOccurs="0" dfdl:occursCountKind="expression" dfdl:occursCount="{if (fn:exists(flags and flags mod 2 = 1)) then 1 else 0}">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="xlen" type="xs:short" dfdl:length="2" dfdl:textNumberRep="binary"/>
            <xs:element name="extras" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{../xlen}"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="filename" minOccurs="0" dfdl:occursCountKind="expression" dfdl:occursCount="{if (fn:exists(flags and flags mod 8 = 0)) then 0 else 1}">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:whiteSpace value="preserve"/>
          </xs:restriction>
        </xs:simpleType>
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:lengthKind="delimited"/>
            <dfdl:terminator="0x00"/>
            <dfdl:encoding="ASCII"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="comment" minOccurs="0" dfdl:occursCountKind="expression" dfdl:occursCount="{if (fn:exists(flags and flags mod 16 = 0)) then 0 else 1}">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:whiteSpace value="preserve"/>
          </xs:restriction>
        </xs:simpleType>
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:lengthKind="delimited"/>
            <dfdl:terminator="0x00"/>
            <dfdl:encoding="ASCII"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="crc16" type="xs:short" minOccurs="0" dfdl:occursCountKind="expression" dfdl:occursCount="{if (fn:exists(flags and flags mod 2 = 1)) then 1 else 0}" dfdl:length="2" dfdl:textNumberRep="binary"/>
      <xs:element name="compressedData" type="xs:hexBinary" dfdl:lengthKind="delimited" dfdl:terminator="0x03 0x00"/>
      <xs:element name="crc32" type="xs:int" dfdl:length="4" dfdl:textNumberRep="binary"/>
      <xs:element name="inputSize" type="xs:int" dfdl:length="4" dfdl:textNumberRep="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="GzipFile" type="tns:gzipFile"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="defaultFormat">
        <dfdl:format byteOrder="bigEndian"
                     bitOrder="mostSignificantBitFirst"
                     binaryNumberRep="binary"
                     textNumberRep="standard"
                     representation="binary"/>
      </dfdl:defineFormat>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>