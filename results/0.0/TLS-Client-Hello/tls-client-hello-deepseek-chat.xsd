<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/tls-client-hello"
           xmlns:tls="http://example.com/tls-client-hello"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat" />
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="TLSClientHello">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="RecordHeader" type="tls:RecordHeaderType" />
        <xs:element name="HandshakeHeader" type="tls:HandshakeHeaderType" />
        <xs:element name="ClientVersion" type="tls:ClientVersionType" />
        <xs:element name="Random" type="tls:RandomType" />
        <xs:element name="SessionID" type="tls:SessionIDType" />
        <xs:element name="CipherSuites" type="tls:CipherSuitesType" />
        <xs:element name="CompressionMethods" type="tls:CompressionMethodsType" />
        <xs:element name="Extensions" type="tls:ExtensionsType" minOccurs="0" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="RecordHeaderType">
    <xs:sequence>
      <xs:element name="ContentType" type="xs:unsignedByte" dfdl:length="1" />
      <xs:element name="Version" type="xs:unsignedShort" dfdl:length="2" />
      <xs:element name="Length" type="xs:unsignedShort" dfdl:length="2" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HandshakeHeaderType">
    <xs:sequence>
      <xs:element name="HandshakeType" type="xs:unsignedByte" dfdl:length="1" />
      <xs:element name="Length" type="xs:unsignedInt" dfdl:length="3" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ClientVersionType">
    <xs:sequence>
      <xs:element name="Major" type="xs:unsignedByte" dfdl:length="1" />
      <xs:element name="Minor" type="xs:unsignedByte" dfdl:length="1" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="RandomType">
    <xs:sequence>
      <xs:element name="GMTUnixTime" type="xs:unsignedInt" dfdl:length="4" />
      <xs:element name="RandomBytes" type="xs:hexBinary" dfdl:length="28" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SessionIDType">
    <xs:sequence>
      <xs:element name="Length" type="xs:unsignedByte" dfdl:length="1" />
      <xs:element name="SessionID" type="xs:hexBinary" dfdl:length="{ ../Length }" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CipherSuitesType">
    <xs:sequence>
      <xs:element name="Length" type="xs:unsignedShort" dfdl:length="2" />
      <xs:element name="CipherSuites" type="xs:hexBinary" dfdl:length="{ ../Length }" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CompressionMethodsType">
    <xs:sequence>
      <xs:element name="Length" type="xs:unsignedByte" dfdl:length="1" />
      <xs:element name="CompressionMethods" type="xs:hexBinary" dfdl:length="{ ../Length }" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ExtensionsType">
    <xs:sequence>
      <xs:element name="Length" type="xs:unsignedShort" dfdl:length="2" />
      <xs:element name="Extensions" type="xs:hexBinary" dfdl:length="{ ../Length }" />
    </xs:sequence>
  </xs:complexType>

  <dfdl:defineFormat name="GeneralFormat">
    <dfdl:format representation="binary" byteOrder="bigEndian" />
  </dfdl:defineFormat>

</xs:schema>