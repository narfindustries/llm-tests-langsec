<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/networkTimeProtocol" elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xs:element name="NetworkTimeProtocolVersion4">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="leapIndicator" type="dfdl:byte" dfdl:length="1"/>
        <xs:element name="versionNumber" type="dfdl:byte" dfdl:length="1"/>
        <xs:element name="mode" type="dfdl:byte" dfdl:length="1"/>
        <xs:element name="stratum" type="dfdl:byte" dfdl:length="1"/>
        <xs:element name="pollInterval" type="dfdl:unsignedInt" dfdl:length="2"/>
        <xs:element name="precision" type="dfdl:byte" dfdl:length="1"/>
        <xs:element name="rootDelay" type="dfdl:long" dfdl:length="4"/>
        <xs:element name="rootDispersion" type="dfdl:long" dfdl:length="4"/>
        <xs:element name="referenceID" type="dfdl:string" dfdl:length="4"/>
        <xs:element name="referenceTimestamp" type="dfdl:long" dfdl:length="8"/>
        <xs:element name="originateTimestamp" type="dfdl:long" dfdl:length="8"/>
        <xs:element name="receiveTimestamp" type="dfdl:long" dfdl:length="8"/>
        <xs:element name="transmitTimestamp" type="dfdl:long" dfdl:length="8"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <dfdl:defineSchema>
    <dfdl:format binary="true" byteOrder="bigEndian"/>
  </dfdl:defineSchema>

</xs:schema>
