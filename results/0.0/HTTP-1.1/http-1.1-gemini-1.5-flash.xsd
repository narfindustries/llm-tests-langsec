<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/http-1.1"
           xmlns="http://example.org/http-1.1"
           elementFormDefault="qualified">

  <xs:element name="http-1.1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" maxOccurs="unbounded"/>
        <xs:element name="body" type="xs:string" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occurs="1"/>
    </xs:complexType>
    <xs:annotation>
      <xs:appinfo source="http://www.ogf.org/dfdl/">
        <dfdl:text lengthKind="delimited" lengthUnits="bytes" encoding="UTF-8"/>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="value" type="xs:string"/>
    </xs:sequence>
    <xs:annotation>
      <xs:appinfo source="http://www.ogf.org/dfdl/">
        <dfdl:text separator=": " lengthKind="delimited" lengthUnits="characters"/>
      </xs:appinfo>
    </xs:annotation>
  </xs:complexType>

</xs:schema>
