<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/hl7-v2"
           xmlns:tns="http://example.com/hl7-v2"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:hl7Format"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="hl7Format"
               initiator="%x0B"
               terminator="%x1C%x0D"
               textNumberRep="standard"
               textStandardBase="10"
               textStandardZeroRep="0"
               textBooleanTrueRep="T"
               textBooleanFalseRep="F"
               textStringPadCharacter="%SP;"
               textTrimKind="both"
               lengthKind="delimited"
               encoding="UTF-8"/>

  <xs:element name="HL7Message">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="MSH" type="tns:SegmentType"/>
        <xs:element name="Segments" type="tns:SegmentType" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="SegmentType">
    <xs:sequence>
      <xs:element name="Field" type="tns:FieldType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="segmentId" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="FieldType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="fieldId" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

</xs:schema>