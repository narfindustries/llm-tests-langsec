<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ICMP"
           xmlns:tns="http://example.com/ICMP"
           elementFormDefault="qualified"
           dfdl:format="true"
           dfdl:encoding="utf-8">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:ICMPFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="ICMPFormat" byteOrder="bigEndian" lengthKind="explicit" lengthUnits="bytes"/>

  <xs:element name="ICMPMessage">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Type" type="xs:unsignedByte" dfdl:length="1"/>
        <xs:element name="Code" type="xs:unsignedByte" dfdl:length="1"/>
        <xs:element name="Checksum" type="xs:unsignedShort" dfdl:length="2"/>
        <xs:element name="RestOfHeader" type="xs:unsignedInt" dfdl:length="4"/>
        <xs:element name="Data" type="xs:hexBinary" dfdl:lengthKind="implicit"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>