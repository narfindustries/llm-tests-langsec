<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/modbus"
           xmlns:tns="http://example.com/modbus"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:modbusFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="modbusFormat"
               byteOrder="bigEndian"
               encoding="utf-8"
               lengthKind="explicit"
               lengthUnits="bytes"
               alignmentUnits="bytes"/>

  <xs:element name="ModbusMessage">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="TransactionID" type="xs:unsignedShort">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="length" value="2"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="ProtocolID" type="xs:unsignedShort">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="length" value="2"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="Length" type="xs:unsignedShort">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="length" value="2"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="UnitID" type="xs:unsignedByte">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="length" value="1"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="FunctionCode" type="xs:unsignedByte">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="length" value="1"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="Data" type="xs:hexBinary" minOccurs="0" maxOccurs="1">
          <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
              <dfdl:property name="lengthKind" value="implicit"/>
              <dfdl:property name="lengthUnits" value="bytes"/>
              <dfdl:property name="length" value="{../Length - 2}"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>