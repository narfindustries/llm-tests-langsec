<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/arp"
           xmlns:ex="http://example.com/arp">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:ARPFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="ARPMessage">
    <xs:sequence>
      <xs:element name="hardwareType" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary"/>
      <xs:element name="protocolType" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary"/>
      <xs:element name="hardwareSize" type="xs:unsignedByte" dfdl:length="1" dfdl:encoding="binary"/>
      <xs:element name="protocolSize" type="xs:unsignedByte" dfdl:length="1" dfdl:encoding="binary"/>
      <xs:element name="opcode" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary"/>
      <xs:element name="senderMACAddress" type="xs:hexBinary" dfdl:length="6" dfdl:encoding="binary"/>
      <xs:element name="senderIPAddress" type="xs:hexBinary" dfdl:length="4" dfdl:encoding="binary"/>
      <xs:element name="targetMACAddress" type="xs:hexBinary" dfdl:length="6" dfdl:encoding="binary"/>
      <xs:element name="targetIPAddress" type="xs:hexBinary" dfdl:length="4" dfdl:encoding="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="ARPMessage" type="ex:ARPMessage"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="ARPFormat">
        <dfdl:format byteOrder="bigEndian" bitOrder="mostSignificantBitFirst"
                     binaryNumberRep="binary" lengthKind="explicit" encoding="UTF-8"/>
      </dfdl:defineFormat>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>