<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dns"
           xmlns:ex="http://example.com/dns">

  <xs:include schemaLocation="DFDLAnnotations.xsd"/>

  <xs:element name="DNSPacket" type="ex:DNSPacketType"/>

  <xs:complexType name="DNSPacketType">
    <xs:sequence>
      <xs:element name="TransactionID" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Flags" type="ex:FlagsType"/>
      <xs:element name="Questions" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="AnswerRRs" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="AuthorityRRs" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="AdditionalRRs" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Queries" type="ex:QueriesType" dfdl:occursCountKind="expression" dfdl:occursCount="{ ../ex:Questions }"/>
      <xs:element name="Answers" type="ex:ResourceRecordType" dfdl:occursCountKind="expression" dfdl:occursCount="{ ../ex:AnswerRRs }"/>
      <xs:element name="Authorities" type="ex:ResourceRecordType" dfdl:occursCountKind="expression" dfdl:occursCount="{ ../ex:AuthorityRRs }"/>
      <xs:element name="Additionals" type="ex:ResourceRecordType" dfdl:occursCountKind="expression" dfdl:occursCount="{ ../ex:AdditionalRRs }"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FlagsType">
    <xs:sequence>
      <xs:element name="QR" type="xs:boolean" dfdl:length="1" dfdl:lengthKind="explicit"/>
      <xs:element name="Opcode" type="xs:unsignedByte" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="AA" type="xs:boolean" dfdl:length="1" dfdl:lengthKind="explicit"/>
      <xs:element name="TC" type="xs:boolean" dfdl:length="1" dfdl:lengthKind="explicit"/>
      <xs:element name="RD" type="xs:boolean" dfdl:length="1" dfdl:lengthKind="explicit"/>
      <xs:element name="RA" type="xs:boolean" dfdl:length="1" dfdl:lengthKind="explicit"/>
      <xs:element name="Z" type="xs:unsignedByte" dfdl:length="3" dfdl:lengthKind="explicit"/>
      <xs:element name="RCode" type="xs:unsignedByte" dfdl:length="4" dfdl:lengthKind="explicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="QueriesType">
    <xs:sequence>
      <xs:element name="Name" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="0"/>
      <xs:element name="Type" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Class" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ResourceRecordType">
    <xs:sequence>
      <xs:element name="Name" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="0"/>
      <xs:element name="Type" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Class" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="TTL" type="xs:unsignedInt" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="DataLength" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Data" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ex:DataLength }"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>