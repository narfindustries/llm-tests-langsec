<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/dns" elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xs:element name="dnsGemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" dfdl:occursCountKind="exactlyOne"/>
        <xs:element name="records" type="recordsType" dfdl:occursCountKind="exactlyOne"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:length="1"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="recordCount" type="xs:integer" dfdl:length="4" dfdl:representation="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="recordsType">
    <xs:sequence>
      <xs:element name="record" type="recordType" dfdl:occursCountKind="variable" dfdl:occursCount="{recordCount}"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="recordType">
    <xs:sequence>
      <xs:element name="type" type="xs:integer" dfdl:length="2" dfdl:representation="binary"/>
      <xs:element name="data" type="xs:string" dfdl:length="255"/>
    </xs:sequence>
  </xs:complexType>

  <dfdl:defineSchema>
    <dfdl:format binary="true" byteOrder="bigEndian" encoding="UTF-8" lengthUnits="bytes"/>
  </dfdl:defineSchema>

</xs:schema>
