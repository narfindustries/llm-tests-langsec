<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/bitcoin-transactions"
           xmlns:tns="http://example.com/bitcoin-transactions">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        separator=""
        initiator=""
        terminator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        occursCountKind="parsed"
        representation="binary"
        lengthKind="explicit"
        lengthUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="BitcoinTransaction">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="Version" type="xs:int" dfdl:length="4"/>
        <xs:element name="InputCount" type="xs:int" dfdl:length="1"/>
        <xs:element name="Inputs">
          <xs:complexType>
            <xs:sequence dfdl:separator="">
              <xs:element name="Input" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence dfdl:separator="">
                    <xs:element name="PreviousTxHash" type="xs:hexBinary" dfdl:length="32"/>
                    <xs:element name="OutputIndex" type="xs:int" dfdl:length="4"/>
                    <xs:element name="ScriptLength" type="xs:int" dfdl:length="1"/>
                    <xs:element name="ScriptSig" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{../ScriptLength}"/>
                    <xs:element name="Sequence" type="xs:int" dfdl:length="4"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="OutputCount" type="xs:int" dfdl:length="1"/>
        <xs:element name="Outputs">
          <xs:complexType>
            <xs:sequence dfdl:separator="">
              <xs:element name="Output" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence dfdl:separator="">
                    <xs:element name="Value" type="xs:long" dfdl:length="8"/>
                    <xs:element name="ScriptLength" type="xs:int" dfdl:length="1"/>
                    <xs:element name="ScriptPubKey" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{../ScriptLength}"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="LockTime" type="xs:int" dfdl:length="4"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>