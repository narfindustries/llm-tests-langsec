transaction {
  version: uint32le,
  tx_in_count: varint,
  tx_in: array(tx_in_count) {
    txid: bytes(32),
    vout: uint32le,
    scriptSig: bytes(varint),
    sequence: uint32le
  },
  tx_out_count: varint,
  tx_out: array(tx_out_count) {
    value: uint64le,
    scriptPubKey: bytes(varint)
  },
  locktime: uint32le
}

block {
  block_header: {
    version: uint32le,
    prevblockhash: bytes(32),
    merkleroot: bytes(32),
    time: uint32le,
    bits: uint32le,
    nonce: uint32le
  },
  transaction_count: varint,
  transactions: array(transaction_count) {
    transaction
  }
}

script {
  opcodes: array(varint) {
    opcode: uint8,
    data: bytes(varint)
  }
}

opcode {
