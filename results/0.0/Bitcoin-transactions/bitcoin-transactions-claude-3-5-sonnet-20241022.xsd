<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:local="http://example.com/ns/local"
    targetNamespace="http://example.com/ns/local"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                        lengthKind="implicit"
                        occursCountKind="implicit"
                        representation="binary"
                        binaryNumberRep="binary"
                        byteOrder="littleEndian"
                        encodingErrorPolicy="replace"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="BitcoinTransaction">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="version" type="xs:int" dfdl:length="4"/>
                <xs:element name="inputCount" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="inputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="previousTransactionHash" type="xs:hexBinary" dfdl:length="32"/>
                            <xs:element name="previousOutputIndex" type="xs:int" dfdl:length="4"/>
                            <xs:element name="scriptLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                            <xs:element name="scriptSig" type="xs:hexBinary" dfdl:lengthKind="explicit" 
                                      dfdl:lengthRef="scriptLength"/>
                            <xs:element name="sequence" type="xs:int" dfdl:length="4"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="outputCount" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="outputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="value" type="xs:long" dfdl:length="8"/>
                            <xs:element name="scriptLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                            <xs:element name="scriptPubKey" type="xs:hexBinary" dfdl:lengthKind="explicit"
                                      dfdl:lengthRef="scriptLength"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="lockTime" type="xs:int" dfdl:length="4"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>