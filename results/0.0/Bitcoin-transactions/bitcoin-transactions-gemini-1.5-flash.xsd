<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/bitcoinTransactions" elementFormDefault="qualified" dfdl:textStandard="US-ASCII" dfdl:separatorSuppressPolicy="trailingEmpty" dfdl:lengthUnits="bytes">

  <xs:element name="BitcoinTransactions">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Transaction" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Version" type="xs:int" dfdl:length="4"/>
              <xs:element name="InputCount" type="xs:int" dfdl:length="4"/>
              <xs:element name="Inputs" dfdl:occursCountKind="implicit" dfdl:lengthKind="implicit">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="PreviousTransactionHash" type="xs:hexBinary" dfdl:length="32"/>
                    <xs:element name="PreviousTransactionOutputIndex" type="xs:int" dfdl:length="4"/>
                    <xs:element name="ScriptLength" type="xs:int" dfdl:length="1"/>
                    <xs:element name="ScriptSig" type="xs:hexBinary" dfdl:lengthKind="length" dfdl:length="{ScriptLength}"/>
                    <xs:element name="Sequence" type="xs:int" dfdl:length="4"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="OutputCount" type="xs:int" dfdl:length="4"/>
              <xs:element name="Outputs" dfdl:occursCountKind="implicit" dfdl:lengthKind="implicit">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Value" type="xs:long" dfdl:length="8"/>
                    <xs:element name="ScriptPubKeyLength" type="xs:int" dfdl:length="1"/>
                    <xs:element name="ScriptPubKey" type="xs:hexBinary" dfdl:lengthKind="length" dfdl:length="{ScriptPubKeyLength}"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="LockTime" type="xs:int" dfdl:length="4"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
