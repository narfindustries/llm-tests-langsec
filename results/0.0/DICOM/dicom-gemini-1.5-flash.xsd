<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/dicom"
           xmlns="http://example.org/dicom"
           elementFormDefault="qualified">

  <xs:element name="DICOM">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" type="HeaderType"/>
        <xs:element name="PixelData" type="xs:base64Binary" dfdl:length="1024"/>  <!-- Example length, adjust as needed -->
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="PatientName" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="64"/>
      <xs:element name="StudyID" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="16"/>
      <!-- Add other header elements as needed -->
    </xs:sequence>
  </xs:complexType>

</xs:schema>

