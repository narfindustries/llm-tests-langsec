<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://www.ogf.org/dfdl/dfdl-1.0/"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:format ref="tns:GeneralFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="DICOMType">
    <xs:sequence>
      <xs:element name="Header" type="tns:HeaderType"/>
      <xs:element name="Data" type="tns:DataType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="MagicNumber" type="xs:string" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="Version" type="xs:int" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="Reserved" type="xs:hexBinary" dfdl:length="2" dfdl:lengthKind="explicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataType">
    <xs:sequence>
      <xs:element name="Tag" type="xs:hexBinary" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="ValueLength" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="Value" type="xs:hexBinary" dfdl:length="{../ValueLength}" dfdl:lengthKind="explicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="DICOM" type="tns:DICOMType"/>

  <dfdl:defineFormat name="GeneralFormat">
    <dfdl:format representation="binary" byteOrder="bigEndian" encoding="UTF-8"/>
  </dfdl:defineFormat>

</xs:schema>