<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:ex="http://example.com/ns/modbus-deepseek-chat"
           targetNamespace="http://example.com/ns/modbus-deepseek-chat"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:ModbusFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="ModbusMessageType">
    <xs:sequence>
      <xs:element name="transactionID" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="protocolID" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="length" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="unitID" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="functionCode" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="data" type="xs:hexBinary" dfdl:length="{ ../length - 2 }"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="ModbusMessage" type="ex:ModbusMessageType"/>

  <dfdl:defineFormat name="ModbusFormat">
    <dfdl:format representation="binary" lengthKind="explicit" encoding="UTF-8" byteOrder="bigEndian"/>
  </dfdl:defineFormat>

</xs:schema>