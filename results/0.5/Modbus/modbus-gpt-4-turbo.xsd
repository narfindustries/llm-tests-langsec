<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dfdl/modbus"
           xmlns:tns="http://example.com/dfdl/modbus">

    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="tns:ModbusFormat"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:complexType name="ModbusFormat">
        <xs:sequence>
            <xs:element name="transactionId" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
            <xs:element name="protocolId" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
            <xs:element name="length" type="xs:unsignedShort" dfdl:length="2" dfdl:lengthKind="explicit"/>
            <xs:element name="unitId" type="xs:unsignedByte" dfdl:length="1" dfdl:lengthKind="explicit"/>
            <xs:element name="functionCode" type="xs:unsignedByte" dfdl:length="1" dfdl:lengthKind="explicit"/>
            <xs:element name="data" type="xs:hexBinary" dfdl:lengthKind="delimited" dfdl:terminator="%LF;"/>
        </xs:sequence>
    </xs:complexType>

    <xs:element name="ModbusMessage" type="tns:ModbusFormat"/>

</xs:schema>