<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:local="http://example.com/ns/local"
    targetNamespace="http://example.com/ns/local"
    xmlns:mbp="http://example.com/ns/modbus-protocol"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" alignmentUnits="bytes"
                binaryBooleanFalseRep="0" binaryBooleanTrueRep="1"
                binaryNumberRep="binary" byteOrder="bigEndian"
                encoding="UTF-8" ignoreCase="no" occursCountKind="implicit"
                leadingSkip="0" lengthKind="implicit" lengthUnits="bytes"
                representation="binary" separator="" separatorSuppressionPolicy="anyEmpty"
                textNumberRep="standard" textStandardBase="10" trailingSkip="0"
                initiator="" terminator="" textTrimKind="none"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="ModbusFrame">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Header">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="TransactionID" type="xs:unsignedShort"/>
                            <xs:element name="ProtocolID" type="xs:unsignedShort" dfdl:outputValueCalc="0"/>
                            <xs:element name="Length" type="xs:unsignedShort"/>
                            <xs:element name="UnitID" type="xs:unsignedByte"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="FunctionCode" type="xs:unsignedByte"/>
                <xs:element name="Data">
                    <xs:complexType>
                        <xs:choice>
                            <xs:element name="ReadCoilsRequest">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="StartingAddress" type="xs:unsignedShort"/>
                                        <xs:element name="QuantityOfCoils" type="xs:unsignedShort"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ReadCoilsResponse">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="ByteCount" type="xs:unsignedByte"/>
                                        <xs:element name="CoilStatus" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ByteCount }"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ReadDiscreteInputsRequest">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="StartingAddress" type="xs:unsignedShort"/>
                                        <xs:element name="QuantityOfInputs" type="xs:unsignedShort"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ReadDiscreteInputsResponse">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="ByteCount" type="xs:unsignedByte"/>
                                        <xs:element name="InputStatus" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ByteCount }"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ErrorResponse">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="ExceptionCode" type="xs:unsignedByte"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:choice>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>