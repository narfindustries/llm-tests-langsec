<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:mqtt="urn:mqtt:3.1.1"
    targetNamespace="urn:mqtt:3.1.1">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" alignmentUnits="bits"
                binaryNumberRep="binary"
                bitOrder="mostSignificantBitFirst"
                byteOrder="bigEndian"
                encoding="UTF-8"
                ignoreCase="no"
                occursCountKind="implicit"
                separatorSuppressionPolicy="anyEmpty"
                separatorPosition="infix"
                textNumberRep="standard"
                textPadKind="none"
                trailingSkipPolicy="never"
                leadingSkipPolicy="never"
                lengthKind="implicit"
                lengthUnits="bits"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="MQTTPacket">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="FixedHeader">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="MessageType" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="DUP" type="xs:boolean" dfdl:length="1"/>
                            <xs:element name="QoS" type="xs:unsignedInt" dfdl:length="2"/>
                            <xs:element name="Retain" type="xs:boolean" dfdl:length="1"/>
                            <xs:element name="RemainingLength" type="xs:unsignedInt" dfdl:lengthKind="explicit" dfdl:length="8"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="VariableHeader">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="ProtocolName">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Length" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="16"/>
                                        <xs:element name="Value" type="xs:string" dfdl:lengthKind="explicit" dfdl:lengthUnits="bytes" dfdl:length="{ ../Length }"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ProtocolVersion" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="8"/>
                            <xs:element name="ConnectFlags">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="UserNameFlag" type="xs:boolean" dfdl:length="1"/>
                                        <xs:element name="PasswordFlag" type="xs:boolean" dfdl:length="1"/>
                                        <xs:element name="WillRetain" type="xs:boolean" dfdl:length="1"/>
                                        <xs:element name="WillQoS" type="xs:unsignedInt" dfdl:length="2"/>
                                        <xs:element name="WillFlag" type="xs:boolean" dfdl:length="1"/>
                                        <xs:element name="CleanSession" type="xs:boolean" dfdl:length="1"/>
                                        <xs:element name="Reserved" type="xs:boolean" dfdl:length="1"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="KeepAlive" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="16"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="Payload">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="ClientID">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Length" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="16"/>
                                        <xs:element name="Value" type="xs:string" dfdl:lengthKind="explicit" dfdl:lengthUnits="bytes" dfdl:length="{ ../Length }"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>