<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/icmp"
           xmlns:ex="http://example.com/icmp">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:generalFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:simpleType name="UInt8">
    <xs:restriction base="xs:unsignedByte"/>
  </xs:simpleType>

  <xs:simpleType name="UInt16">
    <xs:restriction base="xs:unsignedShort"/>
  </xs:simpleType>

  <dfdl:defineFormat name="generalFormat">
    <dfdl:format byteOrder="bigEndian"
                 bitOrder="mostSignificantBitFirst"
                 textNumberRep="standard"
                 lengthKind="delimited"/>
  </dfdl:defineFormat>

  <xs:complexType name="ICMPMessage">
    <xs:sequence>
      <xs:element name="Type" type="ex:UInt8" dfdl:length="1"/>
      <xs:element name="Code" type="ex:UInt8" dfdl:length="1"/>
      <xs:element name="Checksum" type="ex:UInt16" dfdl:length="2"/>
      <xs:element name="RestOfHeader" type="ex:UInt16" dfdl:length="2"/>
      <xs:element name="Data" type="xs:hexBinary" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>