<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://www.ogf.org/dfdl/dfdl-1.0/"
           elementFormDefault="qualified">

  <xs:include schemaLocation="icmp-deepseek-chat.xsd"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat" representation="binary" lengthKind="implicit"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="ICMPPacket" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Type" type="xs:unsignedByte" dfdl:byteOrder="bigEndian"/>
        <xs:element name="Code" type="xs:unsignedByte" dfdl:byteOrder="bigEndian"/>
        <xs:element name="Checksum" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
        <xs:element name="Identifier" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
        <xs:element name="SequenceNumber" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
        <xs:element name="Data" type="xs:hexBinary" dfdl:length="32" dfdl:byteOrder="bigEndian"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="GeneralFormat">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
          <dfdl:format representation="binary" lengthKind="implicit" byteOrder="bigEndian"/>
        </xs:appinfo>
      </xs:annotation>
    </xs:sequence>
  </xs:complexType>

</xs:schema>