<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dns"
           xmlns:dns="http://example.com/dns">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        alignmentUnits="bytes"
        alignment="1"
        leadingSkip="0"
        trailingSkip="0"
        separator=""
        separatorPosition="infix"
        separatorPolicy="suppressed"
        representation="binary"
        binaryNumberRep="binary"
        byteOrder="bigEndian"
        encoding="ASCII"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="DNSMessage">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="Header" type="dns:DNSHeaderType"/>
        <xs:element name="Questions" type="dns:DNSQuestionsType"/>
        <xs:element name="Answers" type="dns:DNSResourceRecordsType" minOccurs="0"/>
        <xs:element name="Authority" type="dns:DNSResourceRecordsType" minOccurs="0"/>
        <xs:element name="Additional" type="dns:DNSResourceRecordsType" minOccurs="0"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="DNSHeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="TransactionID" type="xs:unsignedShort" dfdl:representation="binary"/>
      <xs:element name="Flags" type="xs:unsignedShort" dfdl:representation="binary"/>
      <xs:element name="QuestionCount" type="xs:unsignedShort" dfdl:representation="binary"/>
      <xs:element name="AnswerCount" type="xs:unsignedShort" dfdl:representation="binary"/>
      <xs:element name="AuthorityCount" type="xs:unsignedShort" dfdl:representation="binary"/>
      <xs:element name="AdditionalCount" type="xs:unsignedShort" dfdl:representation="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DNSQuestionsType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Question" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence dfdl:separator="">
            <xs:element name="Name" type="dns:DNSDomainNameType"/>
            <xs:element name="Type" type="xs:unsignedShort" dfdl:representation="binary"/>
            <xs:element name="Class" type="xs:unsignedShort" dfdl:representation="binary"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DNSResourceRecordsType">
    <xs:sequence dfdl:separator="">
      <xs:element name="ResourceRecord" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence dfdl:separator="">
            <xs:element name="Name" type="dns:DNSDomainNameType"/>
            <xs:element name="Type" type="xs:unsignedShort" dfdl:representation="binary"/>
            <xs:element name="Class" type="xs:unsignedShort" dfdl:representation="binary"/>
            <xs:element name="TTL" type="xs:unsignedInt" dfdl:representation="binary"/>
            <xs:element name="RDLength" type="xs:unsignedShort" dfdl:representation="binary"/>
            <xs:element name="RData" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../RDLength }"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DNSDomainNameType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Labels" dfdl:lengthKind="implicit">
        <xs:complexType>
          <xs:sequence dfdl:separator="">
            <xs:element name="Label" maxOccurs="unbounded">
              <xs:complexType>
                <xs:sequence dfdl:separator="">
                  <xs:element name="Length" type="xs:unsignedByte" dfdl:representation="binary"/>
                  <xs:element name="Data" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="{ ../Length }"/>
                </xs:sequence>
              </xs:complexType>
            </xs:element>
            <xs:element name="NullTerminator" type="xs:unsignedByte" fixed="0" dfdl:representation="binary"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

</xs:schema>