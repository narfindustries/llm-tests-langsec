<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/sqlite3-db"
           xmlns="http://example.com/sqlite3-db"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat" />
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="SQLite3DBType">
    <xs:sequence>
      <xs:element name="Header" type="tns:HeaderType" />
      <xs:element name="Pages" type="tns:PagesType" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="MagicHeader" type="xs:string" dfdl:length="16" dfdl:encoding="ASCII" />
      <xs:element name="PageSize" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="FileFormatWriteVersion" type="xs:byte" />
      <xs:element name="FileFormatReadVersion" type="xs:byte" />
      <xs:element name="ReservedSpace" type="xs:byte" />
      <xs:element name="MaxEmbeddedPayloadFraction" type="xs:byte" />
      <xs:element name="MinEmbeddedPayloadFraction" type="xs:byte" />
      <xs:element name="LeafPayloadFraction" type="xs:byte" />
      <xs:element name="FileChangeCounter" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="DatabaseSizeInPages" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="FirstFreelistPage" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="NumberOfFreelistPages" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="SchemaCookie" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="SchemaFormatNumber" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="DefaultPageCacheSize" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="LargestRootBtreePage" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="TextEncoding" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="UserVersion" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="IncrementalVacuumMode" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="ApplicationID" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="Reserved" type="xs:hexBinary" dfdl:length="20" />
      <xs:element name="VersionValidFor" type="xs:int" dfdl:byteOrder="bigEndian" />
      <xs:element name="SQLiteVersionNumber" type="xs:int" dfdl:byteOrder="bigEndian" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PagesType">
    <xs:sequence>
      <xs:element name="Page" type="tns:PageType" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PageType">
    <xs:sequence>
      <xs:element name="PageHeader" type="tns:PageHeaderType" />
      <xs:element name="PageData" type="xs:hexBinary" dfdl:length="{ ../PageHeader/PageSize }" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PageHeaderType">
    <xs:sequence>
      <xs:element name="PageType" type="xs:byte" />
      <xs:element name="FirstFreeBlock" type="xs:short" dfdl:byteOrder="bigEndian" />
      <xs:element name="NumberOfCells" type="xs:short" dfdl:byteOrder="bigEndian" />
      <xs:element name="StartOfCellContentArea" type="xs:short" dfdl:byteOrder="bigEndian" />
      <xs:element name="FragmentedFreeBytes" type="xs:byte" />
    </xs:sequence>
  </xs:complexType>

  <xs:element name="SQLite3DB" type="tns:SQLite3DBType" />

  <dfdl:defineFormat name="GeneralFormat">
    <dfdl:format representation="binary" byteOrder="bigEndian" />
  </dfdl:defineFormat>

</xs:schema>