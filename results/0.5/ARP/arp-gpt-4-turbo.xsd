<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/arp"
           xmlns:ex="http://example.com/arp">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:defaultFormat"/>
    </xs:appinfo>
  </xs:annotation>
  
  <xs:complexType name="ARP_Packet">
    <xs:sequence>
      <xs:element name="hardwareType" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary" dfdl:byteOrder="bigEndian"/>
      <xs:element name="protocolType" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary" dfdl:byteOrder="bigEndian"/>
      <xs:element name="hardwareSize" type="xs:unsignedByte" dfdl:length="1" dfdl:encoding="binary"/>
      <xs:element name="protocolSize" type="xs:unsignedByte" dfdl:length="1" dfdl:encoding="binary"/>
      <xs:element name="opcode" type="xs:unsignedShort" dfdl:length="2" dfdl:encoding="binary" dfdl:byteOrder="bigEndian"/>
      <xs:element name="senderMACAddress" type="xs:hexBinary" dfdl:length="6" dfdl:encoding="binary"/>
      <xs:element name="senderIPAddress" type="xs:hexBinary" dfdl:length="4" dfdl:encoding="binary"/>
      <xs:element name="targetMACAddress" type="xs:hexBinary" dfdl:length="6" dfdl:encoding="binary"/>
      <xs:element name="targetIPAddress" type="xs:hexBinary" dfdl:length="4" dfdl:encoding="binary"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:element name="ARP_Packet" type="ex:ARP_Packet"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="defaultFormat">
        <dfdl:format byteOrder="bigEndian"
                     bitOrder="mostSignificantBitFirst"
                     encoding="ISO-8859-1"
                     alignment="1"
                     alignmentUnits="bytes"
                     occursCountKind="implicit"/>
      </dfdl:defineFormat>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>