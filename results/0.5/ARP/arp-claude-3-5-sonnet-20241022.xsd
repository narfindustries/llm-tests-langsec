<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:sonnet="urn:sonnet:0.5"
    targetNamespace="urn:sonnet:0.5">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="dfdl:GeneralFormat"
                alignment="1"
                alignmentUnits="bytes"
                binaryNumberRep="binary"
                byteOrder="bigEndian"
                representation="binary"
                lengthUnits="bytes"
                lengthKind="implicit"
                encoding="UTF-8"
                initiator=""
                terminator=""
                occursCountKind="implicit"
                ignoreCase="no"
                textNumberRep="standard"
                separator=""
                separatorSuppressionPolicy="anyEmpty"
                sequenceKind="ordered"
                initiatedContent="no"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="arpPacket">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="hardwareType" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="2"/>
                <xs:element name="protocolType" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="2"/>
                <xs:element name="hardwareAddrLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="protocolAddrLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="operation" type="xs:unsignedShort" dfdl:lengthKind="explicit" dfdl:length="2"/>
                <xs:element name="senderHardwareAddr" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="6"/>
                <xs:element name="senderProtocolAddr" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="4"/>
                <xs:element name="targetHardwareAddr" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="6"/>
                <xs:element name="targetProtocolAddr" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="4"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>