<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ntp"
           xmlns:tns="http://example.com/ntp"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:ntpFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="ntpFormat" byteOrder="bigEndian" lengthKind="explicit" encoding="ascii"/>

  <xs:element name="NTPPacket" type="tns:NTPPacketType"/>

  <xs:complexType name="NTPPacketType">
    <xs:sequence>
      <xs:element name="LeapIndicator" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="2"/>
            <dfdl:property name="bitOrder" value="mostSignificantBitFirst"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="VersionNumber" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="3"/>
            <dfdl:property name="bitOrder" value="mostSignificantBitFirst"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Mode" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="3"/>
            <dfdl:property name="bitOrder" value="mostSignificantBitFirst"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Stratum" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="8"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Poll" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="8"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Precision" type="xs:byte">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="8"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="RootDelay" type="xs:int">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="32"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="RootDispersion" type="xs:int">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="32"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="ReferenceIdentifier" type="xs:string">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="32"/>
            <dfdl:property name="encoding" value="ascii"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="ReferenceTimestamp" type="tns:TimestampType"/>
      <xs:element name="OriginateTimestamp" type="tns:TimestampType"/>
      <xs:element name="ReceiveTimestamp" type="tns:TimestampType"/>
      <xs:element name="TransmitTimestamp" type="tns:TimestampType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="TimestampType">
    <xs:sequence>
      <xs:element name="Seconds" type="xs:unsignedInt">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="32"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="Fraction" type="xs:unsignedInt">
        <xs:annotation>
          <xs:appinfo>
            <dfdl:property name="length" value="32"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

</xs:schema>