<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:local="http://example.com/ns/local"
    targetNamespace="http://example.com/ns/local"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                        lengthKind="delimited"
                        encoding="UTF-8"
                        initiator="" 
                        terminator=""
                        leadingSkip="0"
                        trailingSkip="0"
                        textTrimKind="none"
                        initiatedContent="no"
                        separatorPolicy="suppressed"
                        separatorPosition="infix"
                        ignoreCase="no"
                        representation="binary"
                        binaryNumberRep="binary"
                        byteOrder="littleEndian"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="BitcoinTransaction">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Version" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit"/>
                <xs:element name="InputCount" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="Inputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="PreviousTxHash" type="xs:hexBinary" dfdl:length="32" dfdl:lengthKind="explicit"/>
                            <xs:element name="PreviousTxIndex" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit"/>
                            <xs:element name="ScriptLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                            <xs:element name="ScriptSig" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:lengthUnits="bytes" dfdl:length="{ ../ScriptLength }"/>
                            <xs:element name="Sequence" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="OutputCount" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                <xs:element name="Outputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Value" type="xs:long" dfdl:length="8" dfdl:lengthKind="explicit"/>
                            <xs:element name="ScriptLength" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1"/>
                            <xs:element name="ScriptPubKey" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:lengthUnits="bytes" dfdl:length="{ ../ScriptLength }"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="LockTime" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>