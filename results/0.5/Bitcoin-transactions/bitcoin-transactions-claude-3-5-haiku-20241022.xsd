<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:fn="http://www.w3.org/2005/xpath-functions"
           targetNamespace="http://example.com/bitcoin-transactions"
           xmlns:tns="http://example.com/bitcoin-transactions">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        separator=""
        initiator=""
        terminator=""
        leadingSkip="0"
        trailingSkip="0"
        textNumberRep="standard"
        textNumberPattern="#"
        textZonedSignStyle="implicit"
        escapeSchemeRef=""
        representation="binary"
        binaryNumberRep="binary"
        byteOrder="bigEndian"
        bitOrder="mostSignificantBitFirst"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="BitcoinTransaction" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Version" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:representation="binary"/>
        <xs:element name="InputCount" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:representation="binary"/>
        <xs:element name="Inputs" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence dfdl:occursCountKind="expression" dfdl:occursCount="{ ../InputCount }">
              <xs:element name="Input">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="TransactionHash" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="32" dfdl:representation="binary"/>
                    <xs:element name="OutputIndex" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:representation="binary"/>
                    <xs:element name="ScriptLength" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:representation="binary"/>
                    <xs:element name="ScriptSignature" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ScriptLength }" dfdl:representation="binary"/>
                    <xs:element name="SequenceNumber" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:representation="binary"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="OutputCount" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:representation="binary"/>
        <xs:element name="Outputs" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence dfdl:occursCountKind="expression" dfdl:occursCount="{ ../OutputCount }">
              <xs:element name="Output">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Amount" type="xs:long" dfdl:lengthKind="explicit" dfdl:length="8" dfdl:representation="binary"/>
                    <xs:element name="ScriptLength" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:representation="binary"/>
                    <xs:element name="ScriptPubKey" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ScriptLength }" dfdl:representation="binary"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="LockTime" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:representation="binary"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>