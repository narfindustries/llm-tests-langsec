<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/HTTP-1.1"
           xmlns="http://example.com/HTTP-1.1"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:HTTPFormat" />
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="HTTPMessageType">
    <xs:sequence>
      <xs:element name="startLine" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="%NL;" />
      <xs:element name="headers" type="tns:HeadersType" />
      <xs:element name="body" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="%NL;" minOccurs="0" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeadersType">
    <xs:sequence>
      <xs:element name="header" type="tns:HeaderType" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="name" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator=": " />
      <xs:element name="value" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="%NL;" />
    </xs:sequence>
  </xs:complexType>

  <xs:element name="HTTPMessage" type="tns:HTTPMessageType" />

  <dfdl:defineFormat name="HTTPFormat">
    <dfdl:format encoding="UTF-8" lengthKind="delimited" separator="%NL;" />
  </dfdl:defineFormat>

</xs:schema>