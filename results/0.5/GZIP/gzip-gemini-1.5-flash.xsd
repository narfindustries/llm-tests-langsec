<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/gemini"
           xmlns="http://example.org/gemini"
           elementFormDefault="qualified">

  <xs:element name="gemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" minOccurs="1" maxOccurs="1"/>
        <xs:element name="data" type="dataType" minOccurs="1" maxOccurs="unbounded"/>
        <xs:element name="trailer" type="trailerType" minOccurs="1" maxOccurs="1"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occurs="1"/>
    </xs:complexType>
    <xs:annotation>
      <xs:appinfo source="http://www.ogf.org/dfdl/">
        <dfdl:format ref="dfdl:gzip"/>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="field1" type="xs:string" dfdl:length="10"/>
      <xs:element name="field2" type="xs:integer" dfdl:length="5"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="dataType">
    <xs:sequence>
      <xs:element name="field3" type="xs:string" dfdl:length="20"/>
      <xs:element name="field4" type="xs:decimal" dfdl:length="8" dfdl:fractionDigits="2"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="trailerType">
    <xs:sequence>
      <xs:element name="recordCount" type="xs:integer"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>
