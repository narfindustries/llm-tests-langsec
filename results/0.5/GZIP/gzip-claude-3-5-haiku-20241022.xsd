<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:gzip="http://www.example.org/gzip"
           targetNamespace="http://www.example.org/gzip"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        representation="binary"
        alignmentUnits="bytes"
        alignment="1"
        byteOrder="bigEndian"
        encoding="UTF-8"
        fillByte="%#r00"
        occursCountKind="parsed"
        lengthKind="explicit"
        lengthUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="gzipFile" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="header" type="gzip:gzipHeader"/>
        <xs:element name="compressedBlocks" type="gzip:compressedData" maxOccurs="unbounded"/>
        <xs:element name="footer" type="gzip:gzipFooter"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="gzipHeader">
    <xs:sequence dfdl:separator="">
      <xs:element name="magicNumber" type="xs:hexBinary" 
        dfdl:lengthKind="explicit" 
        dfdl:length="2"
        dfdl:inputValuePattern="1F8B"/>
      <xs:element name="compressionMethod" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="flags" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="modificationTime" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
      <xs:element name="extraFlags" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="operatingSystem" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="compressedData">
    <xs:sequence dfdl:separator="">
      <xs:element name="compressedBlock" type="xs:hexBinary" 
        dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="gzipFooter">
    <xs:sequence dfdl:separator="">
      <xs:element name="crc32" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
      <xs:element name="originalSize" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>