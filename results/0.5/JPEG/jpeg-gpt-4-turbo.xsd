<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:GeneralFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="JPEGFile" type="JPEGFileType"/>

  <xs:complexType name="JPEGFileType">
    <xs:sequence>
      <xs:element name="SOI" type="xs:hexBinary" dfdl:length="2" dfdl:initiator="0xFFD8"/>
      <xs:element name="segments" type="SegmentsType"/>
      <xs:element name="EOI" type="xs:hexBinary" dfdl:length="2" dfdl:terminator="0xFFD9"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SegmentsType">
    <xs:sequence dfdl:occursCountKind="parsed">
      <xs:element name="segment" type="SegmentType" dfdl:occursStopValue="-1"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SegmentType">
    <xs:sequence>
      <xs:element name="marker" type="xs:hexBinary" dfdl:length="2"/>
      <xs:element name="length" type="xs:int" dfdl:length="2" dfdl:lengthKind="explicit" dfdl:lengthUnits="bytes"/>
      <xs:element name="data" type="xs:hexBinary" dfdl:lengthKind="delimited" dfdl:delimiter="0xFF"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>