module NetworkTimeProtocol;

public type NTPFlags = unit {
    leapIndicator: uint2;
    version: uint3;
    mode: uint3;
};

public type NTPHeader = unit {
    flags: NTPFlags;
    stratum: uint8;
    poll: int8;
    precision: int8;
    rootDelay: uint32;
    rootDispersion: uint32;
    refID: uint32;
    refTimestamp: uint64;
    origTimestamp: uint64;
    recvTimestamp: uint64;
    transTimestamp: uint64;
};

public type NTPMessage = unit {
    header: NTPHeader;
    on %done {
        print self;
    }
};