<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:ntp="urn:ntp:v4"
    targetNamespace="urn:ntp:v4">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" alignmentUnits="bits"
                binaryNumberRep="binary"
                bitOrder="mostSignificantBitFirst"
                byteOrder="bigEndian"
                representation="binary"
                lengthUnits="bits"
                lengthKind="implicit"
                encodingErrorPolicy="error"
                initiator="" terminator=""
                occursCountKind="implicit"
                separator="" separatorPolicy="suppressed"
                textNumberRep="binary"
                ignoreCase="no"
                initiatedContent="no"
                leadingSkip="0"
                trailingSkip="0"
                textTrimKind="none"
                encoding="UTF-8"
                fillByte="0"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="NTPv4Packet">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="LI_VN_Mode" type="xs:unsignedByte" dfdl:length="8"/>
                <xs:element name="Stratum" type="xs:unsignedByte" dfdl:length="8"/>
                <xs:element name="Poll" type="xs:byte" dfdl:length="8"/>
                <xs:element name="Precision" type="xs:byte" dfdl:length="8"/>
                <xs:element name="RootDelay" type="xs:unsignedInt" dfdl:length="32"/>
                <xs:element name="RootDispersion" type="xs:unsignedInt" dfdl:length="32"/>
                <xs:element name="ReferenceID" type="xs:unsignedInt" dfdl:length="32"/>
                <xs:element name="ReferenceTimestamp">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Seconds" type="xs:unsignedInt" dfdl:length="32"/>
                            <xs:element name="Fraction" type="xs:unsignedInt" dfdl:length="32"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="OriginTimestamp">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Seconds" type="xs:unsignedInt" dfdl:length="32"/>
                            <xs:element name="Fraction" type="xs:unsignedInt" dfdl:length="32"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ReceiveTimestamp">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Seconds" type="xs:unsignedInt" dfdl:length="32"/>
                            <xs:element name="Fraction" type="xs:unsignedInt" dfdl:length="32"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="TransmitTimestamp">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Seconds" type="xs:unsignedInt" dfdl:length="32"/>
                            <xs:element name="Fraction" type="xs:unsignedInt" dfdl:length="32"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>