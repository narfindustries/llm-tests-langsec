<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/mqtt"
           xmlns="http://example.org/mqtt"
           elementFormDefault="qualified">

  <xs:element name="mqtt_gemini_1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="HeaderType" dfdl:occursCountKind="exactlyOne"/>
        <xs:element name="payload" type="PayloadType" dfdl:occursCountKind="exactlyOne"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:lengthKind="explicit" dfdl:length="3"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="message_id" type="xs:unsignedInt" dfdl:lengthKind="implicit"/>
      <xs:element name="timestamp" type="xs:dateTime" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PayloadType">
    <xs:sequence>
      <xs:element name="topic" type="xs:string" dfdl:lengthKind="implicit"/>
      <xs:element name="data" type="xs:base64Binary" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>

