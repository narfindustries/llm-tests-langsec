<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="urn:example:icmp"
           xmlns="urn:example:icmp"
           elementFormDefault="qualified"
           dfdl:formatRef="dfdl:daffodil">
  
  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:format ref="dfdl:daffodil"/>
    </xs:appinfo>
  </xs:annotation>
  
  <xs:element name="ICMPMessage">
    <xs:complexType>
      <xs:sequence dfdl:initiator="" dfdl:terminator="">
        <xs:element name="type" type="xs:unsignedByte">
          <xs:annotation>
            <xs:appinfo>
              <dfdl:element length="8" lengthUnits="bits" representation="binary"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="code" type="xs:unsignedByte">
          <xs:annotation>
            <xs:appinfo>
              <dfdl:element length="8" lengthUnits="bits" representation="binary"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="checksum" type="xs:unsignedShort">
          <xs:annotation>
            <xs:appinfo>
              <dfdl:element length="16" lengthUnits="bits" representation="binary"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="restOfHeader" type="xs:hexBinary">
          <xs:annotation>
            <xs:appinfo>
              <dfdl:element length="32" lengthUnits="bits" representation="binary"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
        <xs:element name="data" type="xs:hexBinary" minOccurs="0">
          <xs:annotation>
            <xs:appinfo>
              <dfdl:element lengthKind="endOfParent" representation="binary"/>
            </xs:appinfo>
          </xs:annotation>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>