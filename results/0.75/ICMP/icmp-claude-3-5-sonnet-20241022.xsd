<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:icmp="urn:icmp:1.0"
    targetNamespace="urn:icmp:1.0">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                        lengthKind="implicit"
                        representation="binary"
                        byteOrder="bigEndian"
                        binaryNumberRep="binary"
                        encodingErrorPolicy="replace"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="ICMPPacket">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="type" type="xs:unsignedByte"/>
                <xs:element name="code" type="xs:unsignedByte"/>
                <xs:element name="checksum" type="xs:unsignedShort"/>
                <xs:element name="restOfHeader">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="identifier" type="xs:unsignedShort"/>
                            <xs:element name="sequenceNumber" type="xs:unsignedShort"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="data" type="xs:hexBinary" dfdl:lengthKind="remainder"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>