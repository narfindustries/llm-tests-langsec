<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/sqlite3-db"
           xmlns="http://example.org/sqlite3-db"
           elementFormDefault="qualified">

  <xs:element name="sqlite3-db-gemini-1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="HeaderType" dfdl:occursCountKind="fixed" dfdl:occursCount="1"/>
        <xs:element name="records" type="RecordsType" dfdl:occursCountKind="unbounded"/>
        <xs:element name="footer" type="FooterType" dfdl:occursCountKind="fixed" dfdl:occursCount="1"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:lengthKind="fixed" dfdl:length="4"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="creationDate" type="xs:date"/>
      <xs:element name="databaseName" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="RecordsType">
    <xs:sequence>
      <xs:element name="record" type="RecordType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="RecordType">
    <xs:sequence>
      <xs:element name="id" type="xs:integer"/>
      <xs:element name="value" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FooterType">
    <xs:sequence>
      <xs:element name="recordCount" type="xs:integer"/>
    </xs:sequence>
  </xs:complexType>

  <dfdl:defineSchema>
    <dfdl:format binary="false" byteOrder="bigEndian" encoding="UTF-8"
                 lengthUnits="bytes" representation="text"/>
    <dfdl:textDelimiter occurrence="1" text="|"/>
    <dfdl:layout textAlignment="left"/>
    <dfdl:sequence separator=","/>
  </dfdl:defineSchema>


</xs:schema>
