<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/spec/dfdl/schema/annotate"
           targetNamespace="http://example.com/elf"
           xmlns:elf="http://example.com/elf">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/spec/dfdl/">
      <dfdl:format 
        alignmentUnits="bytes"
        alignment="1"
        leadingSkip="0"
        trailingSkip="0"
        initiator=""
        terminator=""
        separator=""
        separatorPosition="infix"
        separatorPolicy="suppressed"
        representation="binary"
        binaryNumberRep="binary"
        byteOrder="bigEndian"
        bitOrder="mostSignificantBitFirst"
        escapeSchemeRef=""
        textNumberRep="standard"
        textPadding="none"
        truncateSpecifiedLengthString="no"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="ELFFile" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Magic" type="xs:hexBinary" 
                          dfdl:length="4" 
                          dfdl:lengthKind="explicit"/>
              <xs:element name="Class" type="xs:byte" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="1"/>
              <xs:element name="DataEncoding" type="xs:byte" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="1"/>
              <xs:element name="Version" type="xs:byte" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="1"/>
              <xs:element name="OS_ABI" type="xs:byte" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="1"/>
              <xs:element name="ABI_Version" type="xs:byte" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="1"/>
              <xs:element name="Padding" type="xs:hexBinary" 
                          dfdl:length="7" 
                          dfdl:lengthKind="explicit"/>
              <xs:element name="Type" type="xs:unsignedShort" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="2"/>
              <xs:element name="Machine" type="xs:unsignedShort" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="2"/>
              <xs:element name="Version" type="xs:unsignedInt" 
                          dfdl:lengthKind="explicit" 
                          dfdl:length="4"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>