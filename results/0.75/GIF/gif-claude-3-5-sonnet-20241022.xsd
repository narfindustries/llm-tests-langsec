<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:gif="http://example.com/gif"
    targetNamespace="http://example.com/gif"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                        lengthKind="implicit"
                        occursCountKind="parsed"
                        representation="binary"
                        byteOrder="littleEndian"
                        binaryNumberRep="binary"
                        encodingErrorPolicy="replace"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="gif">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="header" type="gif:HeaderType"/>
                <xs:element name="logicalScreenDescriptor" type="gif:LogicalScreenDescriptorType"/>
                <xs:element name="globalColorTable" type="gif:ColorTableType" minOccurs="0"/>
                <xs:element name="blocks" type="gif:BlocksType"/>
                <xs:element name="trailer" type="xs:hexBinary" fixed="3B" dfdl:lengthKind="explicit" dfdl:length="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="HeaderType">
        <xs:sequence>
            <xs:element name="signature" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="3"/>
            <xs:element name="version" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="3"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="LogicalScreenDescriptorType">
        <xs:sequence>
            <xs:element name="width" type="xs:unsignedShort"/>
            <xs:element name="height" type="xs:unsignedShort"/>
            <xs:element name="packedField" type="xs:unsignedByte"/>
            <xs:element name="bgColorIndex" type="xs:unsignedByte"/>
            <xs:element name="pixelAspectRatio" type="xs:unsignedByte"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ColorTableType">
        <xs:sequence>
            <xs:element name="colorTableEntry" maxOccurs="256">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="red" type="xs:unsignedByte"/>
                        <xs:element name="green" type="xs:unsignedByte"/>
                        <xs:element name="blue" type="xs:unsignedByte"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="BlocksType">
        <xs:sequence>
            <xs:choice maxOccurs="unbounded">
                <xs:element name="imageBlock" type="gif:ImageBlockType"/>
                <xs:element name="extensionBlock" type="gif:ExtensionBlockType"/>
            </xs:choice>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ImageBlockType">
        <xs:sequence>
            <xs:element name="imageSeparator" type="xs:hexBinary" fixed="2C" dfdl:lengthKind="explicit" dfdl:length="1"/>
            <xs:element name="imageDescriptor" type="gif:ImageDescriptorType"/>
            <xs:element name="localColorTable" type="gif:ColorTableType" minOccurs="0"/>
            <xs:element name="imageData" type="gif:ImageDataType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ImageDescriptorType">
        <xs:sequence>
            <xs:element name="left" type="xs:unsignedShort"/>
            <xs:element name="top" type="xs:unsignedShort"/>
            <xs:element name="width" type="xs:unsignedShort"/>
            <xs:element name="height" type="xs:unsignedShort"/>
            <xs:element name="packedField" type="xs:unsignedByte"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ImageDataType">
        <xs:sequence>
            <xs:element name="lzwMinCodeSize" type="xs:unsignedByte"/>
            <xs:element name="dataSubBlocks" type="gif:DataSubBlocksType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ExtensionBlockType">
        <xs:sequence>
            <xs:element name="extensionIntroducer" type="xs:hexBinary" fixed="21" dfdl:lengthKind="explicit" dfdl:length="1"/>
            <xs:element name="extensionLabel" type="xs:unsignedByte"/>
            <xs:element name="dataSubBlocks" type="gif:DataSubBlocksType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="DataSubBlocksType">
        <xs:sequence>
            <xs:element name="subBlock" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="size" type="xs:unsignedByte"/>
                        <xs:element name="data" type="xs:hexBinary" 
                                  dfdl:lengthKind="explicit"
                                  dfdl:length="{../size}"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="blockTerminator" type="xs:hexBinary" fixed="00" 
                      dfdl:lengthKind="explicit" dfdl:length="1"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>