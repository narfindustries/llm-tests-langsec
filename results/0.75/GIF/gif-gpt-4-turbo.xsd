<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/gif"
           xmlns:tns="http://example.com/gif">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="GIFFileType">
    <xs:sequence>
      <xs:element name="header" type="tns:GIFHeaderType"/>
      <xs:element name="logicalScreenDescriptor" type="tns:LogicalScreenDescriptorType"/>
      <xs:element name="globalColorTable" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{../logicalScreenDescriptor.sizeOfGlobalColorTable}"/>
      <!-- Define other sections as needed -->
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="GIFHeaderType">
    <xs:sequence>
      <xs:element name="signature" type="xs:string" dfdl:length="3"/>
      <xs:element name="version" type="xs:string" dfdl:length="3"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="LogicalScreenDescriptorType">
    <xs:sequence>
      <xs:element name="screenWidth" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="screenHeight" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="packedFields" type="xs:byte"/>
      <xs:element name="backgroundColorIndex" type="xs:byte"/>
      <xs:element name="pixelAspectRatio" type="xs:byte"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="PackedFieldType">
    <xs:restriction base="xs:byte">
      <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
          <dfdl:bitOrder>mostSignificantBitFirst</dfdl:bitOrder>
          <dfdl:lengthKind>implicit</dfdl:lengthKind>
        </xs:appinfo>
      </xs:annotation>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>