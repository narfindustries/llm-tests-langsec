HardwareType : type = enum(u16) {
  Ethernet = 1,
  IEEE_802 = 6,
  ARCNET = 7,
  FrameRelay = 15,
  ATM = 16,
  HDLC = 17,
  FibreChannel = 18,
  ATM2 = 19,
  SerialLine = 20
};

ARP_Packet : type = struct {
  htype : HardwareType,
  ptype : EthernetType,
  hlen : u8,
  plen : u8,
  op : enum(u16) {
    Request = 1,
    Reply = 2,
    Request_Reverse = 3,
    Reply_Reverse = 4
  },
  sha : bytes(hlen),
  spa : bytes(plen),
  tha : bytes(hlen),
  tpa : bytes(plen)
};