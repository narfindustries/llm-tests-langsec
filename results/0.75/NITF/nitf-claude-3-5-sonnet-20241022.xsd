<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:nitf="urn:nitf:3.0"
    targetNamespace="urn:nitf:3.0">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="nitf:NITFFormat"
                lengthKind="explicit"
                lengthUnits="bytes"
                encoding="UTF-8"
                occursCountKind="fixed"
                ignoreCase="no"
                initiator=""
                terminator=""
                leadingSkip="0"
                trailingSkip="0"
                textTrimKind="none"
                initiatedContent="no"
                byteOrder="bigEndian"
                alignment="1"
                alignmentUnits="bytes"
                fillByte="%#r20"
                />
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="nitf">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="header">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="fileType" type="xs:string" dfdl:length="4" dfdl:lengthKind="explicit"/>
                            <xs:element name="fileVersion" type="xs:string" dfdl:length="5" dfdl:lengthKind="explicit"/>
                            <xs:element name="complexity" type="xs:string" dfdl:length="1" dfdl:lengthKind="explicit"/>
                            <xs:element name="standardType" type="xs:string" dfdl:length="2" dfdl:lengthKind="explicit"/>
                            <xs:element name="originatingStationId" type="xs:string" dfdl:length="10" dfdl:lengthKind="explicit"/>
                            <xs:element name="fileDateTime" type="xs:string" dfdl:length="14" dfdl:lengthKind="explicit"/>
                            <xs:element name="fileTitle" type="xs:string" dfdl:length="80" dfdl:lengthKind="explicit"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="imageSegment" maxOccurs="999">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="subheader">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="filePartType" type="xs:string" dfdl:length="2" dfdl:lengthKind="explicit"/>
                                        <xs:element name="imageId" type="xs:string" dfdl:length="10" dfdl:lengthKind="explicit"/>
                                        <xs:element name="imageDateTime" type="xs:string" dfdl:length="14" dfdl:lengthKind="explicit"/>
                                        <xs:element name="targetId" type="xs:string" dfdl:length="17" dfdl:lengthKind="explicit"/>
                                        <xs:element name="imageTitle" type="xs:string" dfdl:length="80" dfdl:lengthKind="explicit"/>
                                        <xs:element name="imageCategory" type="xs:string" dfdl:length="8" dfdl:lengthKind="explicit"/>
                                        <xs:element name="imageRepresentation" type="xs:string" dfdl:length="8" dfdl:lengthKind="explicit"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="imageData" type="xs:hexBinary" dfdl:lengthKind="implicit"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="NITFFormat">
        <xs:annotation>
            <xs:appinfo source="http://www.ogf.org/dfdl/">
                <dfdl:defineFormat name="NITFFormat">
                    <dfdl:format ref="nitf:NITFFormat"/>
                </dfdl:defineFormat>
            </xs:appinfo>
        </xs:annotation>
        <xs:restriction base="xs:string"/>
    </xs:simpleType>

</xs:schema>