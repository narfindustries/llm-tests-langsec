<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/http-1.1"
           xmlns="http://example.org/http-1.1"
           elementFormDefault="qualified">

  <xs:element name="http-1.1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="StartLine" type="StartLineType" dfdl:lengthKind="explicit" dfdl:length="1024"/>
        <xs:element name="Headers" type="HeadersType" dfdl:separator="CRLF" dfdl:occursCountKind="unbounded"/>
        <xs:element name="Body" type="xs:string" dfdl:occursCountKind="implicit" dfdl:representation="text"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>


  <xs:complexType name="StartLineType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="method" type="xs:string" use="required"/>
        <xs:attribute name="url" type="xs:string" use="required"/>
        <xs:attribute name="version" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="HeadersType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="name" type="xs:string" use="required"/>
        <xs:attribute name="value" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

</xs:schema>
