<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/png-image" elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xs:element name="pngImage">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="signature" type="xs:hexBinary" dfdl:length="8"/>
        <xs:element name="width" type="xs:unsignedInt" dfdl:length="4"/>
        <xs:element name="height" type="xs:unsignedInt" dfdl:length="4"/>
        <xs:element name="image_data" type="xs:base64Binary" dfdl:lengthKind="implicit"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occursCount="1"/>
    </xs:complexType>
    <xs:annotation>
      <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
        <dfdl:text lengthKind="delimited" lengthUnits="bytes"/>
        <dfdl:binaryFormat binaryNumberRep="binary"/>
        <dfdl:representation term="text"/>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

</xs:schema>
