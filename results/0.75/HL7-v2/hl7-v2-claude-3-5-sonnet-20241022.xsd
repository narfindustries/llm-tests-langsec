<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:local="http://example.com/HL7"
    targetNamespace="http://example.com/HL7">

    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                lengthKind="delimited" 
                encoding="UTF-8"
                separator="" 
                separatorPolicy="required"
                separatorPosition="infix"
                documentFinalTerminatorCanBeMissing="yes"
                initiator=""
                terminator=""
                ignoreCase="no"
                textNumberRep="standard"
                textTrimKind="none"
                textPadKind="none"
                escapeSchemeRef=""
                initiatedContent="no"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="hl7Message">
        <xs:complexType>
            <xs:sequence dfdl:separator="\r">
                <xs:element name="segment" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence dfdl:separator="|">
                            <xs:element name="segmentType" type="xs:string"/>
                            <xs:element name="field" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence dfdl:separator="^">
                                        <xs:element name="component" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence dfdl:separator="&amp;">
                                                    <xs:element name="subcomponent" type="xs:string" maxOccurs="unbounded"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>