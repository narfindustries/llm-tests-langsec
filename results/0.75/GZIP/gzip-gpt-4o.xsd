<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/gzip"
           xmlns:tns="http://example.com/gzip"
           elementFormDefault="qualified"
           version="1.0">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat" />
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="GeneralFormat"
               byteOrder="bigEndian"
               encoding="utf-8" />

  <xs:element name="gzipFile">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="tns:GzipHeader"/>
        <xs:element name="compressedData" type="tns:CompressedData"/>
        <xs:element name="footer" type="tns:GzipFooter"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="GzipHeader">
    <xs:sequence>
      <xs:element name="id1" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
      <xs:element name="id2" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
      <xs:element name="compressionMethod" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
      <xs:element name="flags" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
      <xs:element name="modificationTime" type="xs:unsignedInt" dfdl:length="32" dfdl:binaryNumberRep="binary"/>
      <xs:element name="extraFlags" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
      <xs:element name="operatingSystem" type="xs:unsignedByte" dfdl:length="8" dfdl:binaryNumberRep="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CompressedData">
    <xs:sequence>
      <xs:element name="data" type="xs:hexBinary" dfdl:lengthKind="implicit" dfdl:length="*"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="GzipFooter">
    <xs:sequence>
      <xs:element name="crc32" type="xs:unsignedInt" dfdl:length="32" dfdl:binaryNumberRep="binary"/>
      <xs:element name="inputSize" type="xs:unsignedInt" dfdl:length="32" dfdl:binaryNumberRep="binary"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>