<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/spec/dfdl/schema/annotate"
           xmlns:gzip="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/gzip"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/spec/dfdl/schema/annotate">
      <dfdl:format 
        representation="binary"
        byteOrder="bigEndian"
        alignment="1"
        alignmentUnits="bytes"
        fillByte="%#r00"
        encoding="UTF-8"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="gzipFile">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="header" type="gzip:GZIPHeader"/>
        <xs:element name="compressedData" type="gzip:CompressedData"/>
        <xs:element name="footer" type="gzip:GZIPFooter"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="GZIPHeader">
    <xs:sequence dfdl:separator="">
      <xs:element name="magicNumber" type="xs:hexBinary" 
        dfdl:length="2"
        dfdl:lengthUnits="bytes"
        dfdl:outputValueCalc='{ xs:hexBinary("1F8B") }'/>
      <xs:element name="compressionMethod" type="xs:unsignedByte"
        dfdl:length="1"
        dfdl:lengthUnits="bytes"/>
      <xs:element name="flags" type="xs:unsignedByte"
        dfdl:length="1"
        dfdl:lengthUnits="bytes"/>
      <xs:element name="modificationTime" type="xs:unsignedInt"
        dfdl:length="4"
        dfdl:lengthUnits="bytes"/>
      <xs:element name="extraFlags" type="xs:unsignedByte"
        dfdl:length="1"
        dfdl:lengthUnits="bytes"/>
      <xs:element name="operatingSystem" type="xs:unsignedByte"
        dfdl:length="1"
        dfdl:lengthUnits="bytes"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CompressedData">
    <xs:sequence dfdl:separator="">
      <xs:element name="data" type="xs:hexBinary"
        dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="GZIPFooter">
    <xs:sequence dfdl:separator="">
      <xs:element name="crc32" type="xs:unsignedInt"
        dfdl:length="4"
        dfdl:lengthUnits="bytes"/>
      <xs:element name="originalSize" type="xs:unsignedInt"
        dfdl:length="4"
        dfdl:lengthUnits="bytes"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>