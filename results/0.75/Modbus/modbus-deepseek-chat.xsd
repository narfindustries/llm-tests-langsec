<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://www.ogf.org/dfdl/dfdl-1.0/"
           elementFormDefault="qualified">

  <xs:include schemaLocation="generated/999999/0.75/Modbus/modbus-deepseek-chat.xsd"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="ModbusMessage">
    <xs:sequence>
      <xs:element name="transactionID" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="protocolID" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="length" type="xs:unsignedShort" dfdl:length="2" dfdl:byteOrder="bigEndian"/>
      <xs:element name="unitID" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="functionCode" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="data" type="xs:hexBinary" dfdl:length="{ ../length - 2 }"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="modbusMessage" type="tns:ModbusMessage"/>

  <dfdl:defineFormat name="GeneralFormat">
    <dfdl:format representation="binary" byteOrder="bigEndian" lengthKind="explicit"/>
  </dfdl:defineFormat>

</xs:schema>