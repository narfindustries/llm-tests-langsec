<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" xmlns:tns="http://example.org/tls-client-hello" targetNamespace="http://example.org/tls-client-hello" elementFormDefault="qualified">

  <xs:element name="tlsClientHello">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="record" type="tns:RecordType" dfdl:occursCountKind="unbounded" dfdl:separator=",">
        </xs:element>
      </xs:sequence>
    </xs:complexType>
    <dfdl:format ref="tns:dfdlFormat"/>
  </xs:element>

  <xs:complexType name="RecordType">
    <xs:sequence>
      <xs:element name="field1" type="xs:string" dfdl:length="10"/>
      <xs:element name="field2" type="xs:integer" dfdl:length="5"/>
      <xs:element name="field3" type="xs:decimal" dfdl:length="15" dfdl:totalDigits="15" dfdl:fractionDigits="2"/>
    </xs:sequence>
  </xs:complexType>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:format ref="tns:dfdlFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="dfdlFormat">
      <xs:complexType>
          <xs:sequence/>
          <xs:attribute name="textStandard" type="xs:string" fixed="US-ASCII"/>
          <xs:attribute name="byteOrder" type="xs:string" fixed="bigEndian"/>
          <xs:attribute name="encoding" type="xs:string" fixed="UTF-8"/>
          <xs:attribute name="separator" type="xs:string" fixed=","/>
      </xs:complexType>
  </xs:element>

</xs:schema>
