module ARP;

import spicy;

public type ARP_Packet = unit {
    htype: uint16;
    ptype: uint16;
    hlen: uint8;
    plen: uint8;
    oper: uint16;
    sha: bytes &size=6;
    spa: bytes &size=4;
    tha: bytes &size=6;
    tpa: bytes &size=4;

    on %init {
        if (self.hlen != 6 || self.plen != 4) {
            print("Invalid ARP packet: hlen or plen mismatch");
            return;
        }
    }
};

on ARP_Packet::%done {
    print("ARP packet processed successfully");
}