<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/icmp" elementFormDefault="qualified" version="1.0">

  <xs:annotation>
    <xs:documentation>DFDL Schema for ICMP Gemini 1.5 Flash data</xs:documentation>
  </xs:annotation>

  <xs:element name="icmpGeminiFlash">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" dfdl:lengthKind="explicit" dfdl:length="12"/>
        <xs:element name="payload" type="xs:string" dfdl:lengthKind="variable" dfdl:occursCountKind="implicit" dfdl:lengthUnits="bytes" dfdl:representation="text"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occursCountKind="implicit"/>
    </xs:complexType>
    <xs:unique name="unique_header">
      <xs:selector xpath="header"/>
      <xs:field xpath="@version"/>
    </xs:unique>
  </xs:element>


  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="type" type="xs:unsignedByte" dfdl:byteOrder="bigEndian"/>
      <xs:element name="code" type="xs:unsignedByte" dfdl:byteOrder="bigEndian"/>
      <xs:element name="checksum" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="identifier" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="sequenceNumber" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>
