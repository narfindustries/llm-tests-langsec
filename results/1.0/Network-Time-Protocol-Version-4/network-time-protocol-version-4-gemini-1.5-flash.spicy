module Network_Time_Protocol_Version_4;

type ntp_packet {
    li: uint2 = 0;
    vn: uint3 = 4;
    mode: uint3 = 0;
    stratum: uint8 = 0;
    poll: uint8 = 0;
    precision: uint8 = 0;
    root_delay: uint32 = 0;
    root_dispersion: uint32 = 0;
    ref_id: uint32 = 0;
    ref_timestamp: uint64 = 0;
    orig_timestamp: uint64 = 0;
    recv_timestamp: uint64 = 0;
    xmit_timestamp: uint64 = 0;
    ext_fields: bytes = ""; 
}
