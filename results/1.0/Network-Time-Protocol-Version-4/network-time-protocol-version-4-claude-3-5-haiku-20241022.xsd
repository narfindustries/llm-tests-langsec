<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="urn:network-time-protocol-v4"
           xmlns:ntp="urn:network-time-protocol-v4">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        alignmentUnits="bytes"
        alignment="1"
        leadingSkip="0"
        trailingSkip="0"
        byteOrder="bigEndian"
        encoding="ascii"
        representation="binary"
        separator=""
        separatorPosition="infix"
        separatorPolicy="suppressedAtEndLast"
        initiator=""
        terminator=""
        textNumberPattern=""
        textNumberRep="standard"
        textZonedSignStyle="asciiStandardZonedSign"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="NTPPacket" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="LIVNMode" type="ntp:LIVNModeBits" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:lengthUnits="bytes"/>
        <xs:element name="Stratum" type="xs:unsignedByte" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:lengthUnits="bytes"/>
        <xs:element name="PollInterval" type="xs:byte" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:lengthUnits="bytes"/>
        <xs:element name="Precision" type="xs:byte" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:lengthUnits="bytes"/>
        <xs:element name="RootDelay" type="xs:float" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:lengthUnits="bytes"/>
        <xs:element name="RootDispersion" type="xs:float" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:lengthUnits="bytes"/>
        <xs:element name="ReferenceIdentifier" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="4" dfdl:lengthUnits="bytes"/>
        <xs:element name="ReferenceTimestamp" type="xs:double" dfdl:lengthKind="explicit" dfdl:length="8" dfdl:lengthUnits="bytes"/>
        <xs:element name="OriginTimestamp" type="xs:double" dfdl:lengthKind="explicit" dfdl:length="8" dfdl:lengthUnits="bytes"/>
        <xs:element name="ReceiveTimestamp" type="xs:double" dfdl:lengthKind="explicit" dfdl:length="8" dfdl:lengthUnits="bytes"/>
        <xs:element name="TransmitTimestamp" type="xs:double" dfdl:lengthKind="explicit" dfdl:length="8" dfdl:lengthUnits="bytes"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="LIVNModeBits" dfdl:lengthKind="explicit" dfdl:length="1" dfdl:lengthUnits="bytes">
    <xs:restriction base="xs:unsignedByte">
      <xs:pattern value="[0-255]"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>