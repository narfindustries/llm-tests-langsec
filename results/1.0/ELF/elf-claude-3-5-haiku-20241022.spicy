module ELF;

import spicy;

public type Header = struct {
    magic: bytes[4] = b"\x7fELF";
    class: uint8;
    data_encoding: uint8;
    version: uint8;
    os_abi: uint8;
    abi_version: uint8;
    padding: bytes[7];
    type: uint16;
    machine: uint16;
    elf_version: uint32;
    entry_point: uint64;
    program_header_offset: uint64;
    section_header_offset: uint64;
    flags: uint32;
    header_size: uint16;
    program_header_entry_size: uint16;
    program_header_num_entries: uint16;
    section_header_entry_size: uint16;
    section_header_num_entries: uint16;
    section_header_string_index: uint16;

    validates magic == b"\x7fELF";
};

public type File = unit {
    header: Header;
};