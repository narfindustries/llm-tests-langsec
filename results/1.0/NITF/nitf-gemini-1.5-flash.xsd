<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/nitf"
           xmlns="http://example.org/nitf"
           elementFormDefault="qualified">

  <xs:element name="NITF">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType"/>
        <xs:element name="body" type="bodyType" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:lengthKind="explicit" dfdl:length="4"/>
    </xs:complexType>
  </xs:element>


  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="element1" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator=" "/>
      <xs:element name="element2" type="xs:integer" dfdl:lengthKind="fixed" dfdl:length="5"/>
      <!-- Add other header elements as needed -->
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="bodyType">
    <xs:sequence>
      <xs:element name="element3" type="xs:string"/>
      <!-- Add other body elements as needed -->
    </xs:sequence>
  </xs:complexType>

</xs:schema>

