<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:local="http://example.com/ns/local"
    targetNamespace="http://example.com/ns/local"
    elementFormDefault="unqualified">
    
    <xs:include schemaLocation="org/apache/daffodil/xsd/DFDLGeneralFormat.dfdl.xsd"/>
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="GeneralFormat"
                separator=""
                initiator=""
                terminator=""
                leadingSkip="0"
                trailingSkip="0"
                textTrimKind="none"
                encoding="UTF-8"
                byteOrder="bigEndian"
                alignment="1"
                alignmentUnits="bytes"
                fillByte="0"
                lengthKind="delimited"
                lengthUnits="bytes"
                initiatedContent="no"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="sonnet">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="title" type="xs:string" dfdl:terminator="%NL;"/>
                <xs:element name="author" type="xs:string" dfdl:terminator="%NL;"/>
                <xs:element name="lines">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="line" type="xs:string" 
                                      dfdl:terminator="%NL;"
                                      minOccurs="14" maxOccurs="14"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>