<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://www.example.org/mqtt-deepseek-chat"
           xmlns="http://www.example.org/mqtt-deepseek-chat"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:MQTTFormat" />
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="MQTTMessageType">
    <xs:sequence>
      <xs:element name="header" type="tns:MQTTHeaderType" />
      <xs:element name="payload" type="tns:MQTTPayloadType" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="MQTTHeaderType">
    <xs:sequence>
      <xs:element name="messageType" type="xs:string" dfdl:length="1" dfdl:lengthKind="explicit" />
      <xs:element name="messageLength" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="MQTTPayloadType">
    <xs:sequence>
      <xs:element name="content" type="xs:string" dfdl:lengthKind="delimited" />
    </xs:sequence>
  </xs:complexType>

  <xs:element name="MQTTMessage" type="tns:MQTTMessageType" />

  <dfdl:defineFormat name="MQTTFormat">
    <dfdl:format separator="" separatorPosition="infix" encoding="UTF-8" />
  </dfdl:defineFormat>

</xs:schema>