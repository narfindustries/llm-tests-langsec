<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/zipgemini"
           xmlns="http://example.org/zipgemini"
           elementFormDefault="qualified">

  <xs:element name="zipGemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="HeaderType" dfdl:lengthKind="implicit"/>
        <xs:element name="data" type="DataType" dfdl:lengthKind="explicit" dfdl:length="1024"/>
        <xs:element name="footer" type="FooterType" dfdl:lengthKind="implicit"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occursCountKind="fixed" dfdl:occursCount="1"/>
    </xs:complexType>
  </xs:element>


  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="id" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator=","/>
      <xs:element name="timestamp" type="xs:dateTime" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataType">
    <xs:sequence>
      <xs:element name="record" type="RecordType" maxOccurs="unbounded" dfdl:occursCountKind="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="RecordType">
    <xs:sequence>
      <xs:element name="field1" type="xs:integer" dfdl:lengthKind="explicit" dfdl:length="5"/>
      <xs:element name="field2" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="20"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FooterType">
    <xs:sequence>
      <xs:element name="checksum" type="xs:integer" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>
