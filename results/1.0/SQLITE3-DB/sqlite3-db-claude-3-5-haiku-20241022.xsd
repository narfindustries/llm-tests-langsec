<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/sqlite3-db"
           xmlns:tns="http://example.com/sqlite3-db">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        alignmentUnits="bytes"
        alignment="1"
        leadingSkip="0"
        trailingSkip="0"
        initiator=""
        terminator=""
        separatorSuppressionPolicy="never"
        separatorPosition="infix"
        encoding="UTF-8"
        byteOrder="littleEndian"
        representation="binary"
        textNumberRounding="explicit"
        textStandardBase="10"
        textNumberPattern="#0"
        textNumberCheckPolicy="strict"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="SQLiteDatabase">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="FileHeader" type="tns:FileHeaderType"/>
        <xs:element name="DatabasePages" type="tns:DatabasePagesType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="FileHeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="HeaderString" type="xs:string" 
        dfdl:length="16"
        dfdl:encoding="UTF-8"/>
      <xs:element name="PageSize" type="xs:unsignedShort" 
        dfdl:representation="binary"
        dfdl:byteOrder="bigEndian"/>
      <xs:element name="FileFormatVersion" type="xs:unsignedByte"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DatabasePagesType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Page" type="tns:PageType" 
        maxOccurs="unbounded"
        dfdl:occursCountKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PageType">
    <xs:sequence dfdl:separator="">
      <xs:element name="PageHeader" type="tns:PageHeaderType"/>
      <xs:element name="PageContent" type="tns:PageContentType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PageHeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="PageType" type="xs:unsignedByte"/>
      <xs:element name="FreeBlockOffset" type="xs:unsignedShort" 
        dfdl:representation="binary"
        dfdl:byteOrder="bigEndian"/>
      <xs:element name="CellCount" type="xs:unsignedShort" 
        dfdl:representation="binary"
        dfdl:byteOrder="bigEndian"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PageContentType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Cell" type="tns:CellType" 
        maxOccurs="unbounded"
        dfdl:occursCountKind="expression"
        dfdl:occursCount="{ ../PageHeader/CellCount }"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CellType">
    <xs:sequence dfdl:separator="">
      <xs:element name="PayloadLength" type="xs:unsignedInt" 
        dfdl:representation="binary"
        dfdl:byteOrder="bigEndian"/>
      <xs:element name="RowID" type="xs:unsignedLong" 
        dfdl:representation="binary"
        dfdl:byteOrder="bigEndian"/>
      <xs:element name="Data" type="xs:string" 
        dfdl:lengthKind="explicit"
        dfdl:length="{ ../PayloadLength }"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>