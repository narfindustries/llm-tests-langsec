<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" 
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:btc="http://example.com/bitcoin"
    targetNamespace="http://example.com/bitcoin"
    elementFormDefault="qualified">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" 
                alignmentUnits="bytes"
                binaryNumberRep="binary"
                byteOrder="littleEndian"
                representation="binary"
                occursCountKind="implicit"
                lengthUnits="bytes"
                encoding="UTF-8"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="Transaction">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Version" type="xs:int" dfdl:length="4"/>
                <xs:element name="InputCount" type="xs:unsignedByte" dfdl:length="1"/>
                <xs:element name="Inputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="PreviousTxHash" type="xs:hexBinary" dfdl:length="32"/>
                            <xs:element name="PreviousTxIndex" type="xs:int" dfdl:length="4"/>
                            <xs:element name="ScriptLength" type="xs:unsignedByte" dfdl:length="1"/>
                            <xs:element name="ScriptSig" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ScriptLength }"/>
                            <xs:element name="Sequence" type="xs:int" dfdl:length="4"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="OutputCount" type="xs:unsignedByte" dfdl:length="1"/>
                <xs:element name="Outputs" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Value" type="xs:long" dfdl:length="8"/>
                            <xs:element name="ScriptLength" type="xs:unsignedByte" dfdl:length="1"/>
                            <xs:element name="ScriptPubKey" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../ScriptLength }"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="LockTime" type="xs:int" dfdl:length="4"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>