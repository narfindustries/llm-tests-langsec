<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/jpeg"
           xmlns="http://example.com/jpeg"
           elementFormDefault="qualified"
           dfdl:format ref="tns:JPEGFormat">
  
  <dfdl:format name="JPEGFormat" byteOrder="bigEndian" lengthKind="explicit" lengthUnits="bytes" encoding="ascii"/>

  <xs:element name="JPEG" type="JPEG"/>
 
  <xs:complexType name="JPEG">
    <xs:sequence>
      <xs:element name="SOI" type="SOI" dfdl:length="2"/>
      <xs:sequence maxOccurs="unbounded" dfdl:initiator="%xFF">
        <xs:element name="Segment" type="Segment" dfdl:lengthKind="explicit" dfdl:terminator="%xFF"/>
      </xs:sequence>
      <xs:element name="EOI" type="EOI" dfdl:length="2"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:simpleType name="SOI">
    <xs:restriction base="xs:hexBinary">
      <xs:length value="2"/>
      <xs:enumeration value="FFD8"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="EOI">
    <xs:restriction base="xs:hexBinary">
      <xs:length value="2"/>
      <xs:enumeration value="FFD9"/>
    </xs:restriction>
  </xs:simpleType>
  
  <xs:complexType name="Segment">
    <xs:sequence>
      <xs:element name="Marker" type="Marker"/>
      <xs:element name="Length" type="xs:unsignedShort"/>
      <xs:element name="Data" type="xs:hexBinary" dfdl:length="{../Length - 2}"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:simpleType name="Marker">
    <xs:restriction base="xs:hexBinary">
      <xs:length value="1"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>