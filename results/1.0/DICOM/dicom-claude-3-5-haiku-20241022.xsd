<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://www.dicom.org/dicom-dfdl"
           xmlns:dicom="http://www.dicom.org/dicom-dfdl">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        separator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        alignment="1"
        alignmentUnits="bytes"
        leadingSkip="0"
        trailingSkip="0"
        initiator=""
        terminator=""
        textTrimValue="true"
        textNumberPattern=""
        textNumberRounding="pattern"
        textNumberCheckPolicy="strict"
        textStandardBase="10"
        textStandardDecimalSeparator="."
        textStandardGroupingSeparator=","
        escapeSchemeRef=""
        representation="binary"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="DICOMMessage" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="Header" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence dfdl:separator="">
              <xs:element name="GroupLength" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="4"/>
              <xs:element name="TransferSyntax" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="4"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="DataElements" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence dfdl:separator="">
              <xs:element name="DataElement" maxOccurs="unbounded" dfdl:lengthKind="implicit">
                <xs:complexType>
                  <xs:sequence dfdl:separator="">
                    <xs:element name="Tag" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="4"/>
                    <xs:element name="VR" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="2"/>
                    <xs:element name="Length" type="xs:int" dfdl:lengthKind="explicit" dfdl:length="2"/>
                    <xs:element name="Value" type="xs:string" dfdl:lengthKind="delimited"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>