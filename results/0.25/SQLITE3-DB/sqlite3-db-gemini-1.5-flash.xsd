<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/sqlite3db"
           xmlns="http://example.org/sqlite3db"
           elementFormDefault="qualified">

  <xs:element name="sqlite3_db_gemini_1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="HeaderType" dfdl:occursCountKind="exactlyOne"/>
        <xs:element name="data" type="DataType" dfdl:occursCountKind="exactlyOne"/>
        <xs:element name="footer" type="FooterType" dfdl:occursCountKind="exactlyOne"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:lengthKind="explicit" dfdl:length="4"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="creationDate" type="xs:date" dfdl:lengthKind="explicit" dfdl:length="10"/>
      <xs:element name="databaseName" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="50"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataType">
    <xs:sequence>
      <xs:element name="record" type="RecordType" dfdl:occursCountKind="unbounded"/>
    </xs:sequence>
  </xs:complexType>


  <xs:complexType name="RecordType">
    <xs:sequence>
      <xs:element name="id" type="xs:integer" dfdl:lengthKind="explicit" dfdl:length="10"/>
      <xs:element name="name" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="255"/>
      <xs:element name="value" type="xs:decimal" dfdl:lengthKind="explicit" dfdl:length="15" dfdl:totalDigits="15" dfdl:fractionDigits="2"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FooterType">
    <xs:sequence>
      <xs:element name="recordCount" type="xs:integer" dfdl:lengthKind="explicit" dfdl:length="10"/>
      <xs:element name="checksum" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="32"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>
