<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/nitf"
           xmlns:nitf="http://example.com/nitf">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        separator=""
        initiator=""
        terminator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        alignment="1"
        alignmentUnits="bytes"
        fillByte="%#r20"
        occursCountKind="parsed"
        textNumberPattern="#0"
        textNumberRoundingMode="roundUp"
        textZonedSignStyle="asciiStandard"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="NITF" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="FileVersion" type="xs:string" 
                dfdl:lengthKind="delimited" 
                dfdl:terminator="\r\n"/>
              <xs:element name="FileType" type="xs:string" 
                dfdl:lengthKind="delimited" 
                dfdl:terminator="\r\n"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Content" dfdl:lengthKind="implicit">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Title" type="xs:string" 
                dfdl:lengthKind="delimited" 
                dfdl:terminator="\r\n"/>
              <xs:element name="Text" type="xs:string" 
                dfdl:lengthKind="delimited" 
                dfdl:terminator="\r\n"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>