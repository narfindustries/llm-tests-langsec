module ARP;

type arp {
    hardware_type: uint16;
    protocol_type: uint16;
    hardware_len: uint8;
    protocol_len: uint8;
    operation: uint16;
    sender_hardware_addr: bytes:hardware_len;
    sender_protocol_addr: bytes:protocol_len;
    target_hardware_addr: bytes:hardware_len;
    target_protocol_addr: bytes:protocol_len;
}
