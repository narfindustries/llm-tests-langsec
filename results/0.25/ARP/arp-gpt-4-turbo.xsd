<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/arp"
           xmlns:ex="http://example.com/arp">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:ARPFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:simpleType name="HardwareType">
    <xs:restriction base="xs:unsignedShort">
      <xs:enumeration value="1" dfdl:representation="binary"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="ProtocolType">
    <xs:restriction base="xs:unsignedShort">
      <xs:enumeration value="0x0800" dfdl:representation="binary"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="Operation">
    <xs:restriction base="xs:unsignedShort">
      <xs:enumeration value="1" dfdl:representation="binary"/>
      <xs:enumeration value="2" dfdl:representation="binary"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="ARPMessage">
    <xs:sequence>
      <xs:element name="hardwareType" type="ex:HardwareType" dfdl:length="2"/>
      <xs:element name="protocolType" type="ex:ProtocolType" dfdl:length="2"/>
      <xs:element name="hardwareSize" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="protocolSize" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="operation" type="ex:Operation" dfdl:length="2"/>
      <xs:element name="senderHardwareAddress" type="xs:hexBinary" dfdl:length="6"/>
      <xs:element name="senderProtocolAddress" type="xs:hexBinary" dfdl:length="4"/>
      <xs:element name="targetHardwareAddress" type="xs:hexBinary" dfdl:length="6"/>
      <xs:element name="targetProtocolAddress" type="xs:hexBinary" dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="ARPMessage" type="ex:ARPMessage"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="ARPFormat">
        <dfdl:format byteOrder="bigEndian"
                     binaryNumberRep="binary"
                     bitOrder="mostSignificantBitFirst"
                     encoding="US-ASCII"
                     lengthKind="explicit"/>
      </dfdl:defineFormat>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>