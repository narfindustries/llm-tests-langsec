<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dicom-deepseek-chat"
           xmlns:ex="http://example.com/dicom-deepseek-chat"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:DICOMFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="DICOMFormat">
    <xs:sequence>
      <xs:element name="header" type="ex:HeaderType" dfdl:lengthKind="explicit" dfdl:length="128"/>
      <xs:element name="data" type="ex:DataType" dfdl:lengthKind="implicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeaderType">
    <xs:sequence>
      <xs:element name="magicNumber" type="xs:string" dfdl:lengthKind="explicit" dfdl:length="4"/>
      <xs:element name="version" type="xs:int" dfdl:byteOrder="bigEndian"/>
      <xs:element name="reserved" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="120"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataType">
    <xs:sequence>
      <xs:element name="tag" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="valueLength" type="xs:unsignedShort" dfdl:byteOrder="bigEndian"/>
      <xs:element name="value" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../valueLength }"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="DICOM" type="ex:DICOMFormat"/>

</xs:schema>