<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dicom"
           xmlns:tns="http://example.com/dicom">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:element name="DICOMFile" type="tns:DICOMFileType"/>

  <xs:complexType name="DICOMFileType">
    <xs:sequence>
      <xs:element name="preamble" type="xs:hexBinary" dfdl:length="128" dfdl:lengthKind="explicit"/>
      <xs:element name="prefix" type="xs:string" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="dataElements" type="tns:DataElementsType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataElementsType">
    <xs:sequence dfdl:occursCountKind="parsed">
      <xs:element name="dataElement" type="tns:DataElementType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataElementType">
    <xs:sequence>
      <xs:element name="tag" type="xs:string" dfdl:length="4" dfdl:lengthKind="explicit"/>
      <xs:element name="VR" type="xs:string" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="length" type="xs:int" dfdl:length="4" dfdl:lengthKind="explicit" dfdl:byteOrder="bigEndian"/>
      <xs:element name="value" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{ ../tns:length }"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>