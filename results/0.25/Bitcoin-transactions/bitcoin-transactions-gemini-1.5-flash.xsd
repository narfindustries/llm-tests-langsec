<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" xmlns:tns="http://example.org/bitcoinTransactions" targetNamespace="http://example.org/bitcoinTransactions" elementFormDefault="qualified">

  <xs:element name="BitcoinTransactions">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Transaction" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="TransactionID" type="xs:string" dfdl:length="64"/>
              <xs:element name="Timestamp" type="xs:dateTime"/>
              <xs:element name="Input" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="TransactionID" type="xs:string" dfdl:length="64"/>
                    <xs:element name="OutputIndex" type="xs:integer"/>
                    <xs:element name="Value" type="xs:decimal"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Output" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Address" type="xs:string" dfdl:length="34"/>
                    <xs:element name="Value" type="xs:decimal"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:occurs="1"/>
    </xs:complexType>
  </xs:element>

  <dfdl:defineSchema>
    <dfdl:format binary="false" byteOrder="bigEndian" encoding="UTF-8" lengthUnits="bytes" representation="text"/>
    <dfdl:textSeparator separator=",">
      <dfdl:occurs count="1"/>
    </dfdl:textSeparator>
    <dfdl:sequence ignoreCase="false" textTrim="trim"/>
  </dfdl:defineSchema>

</xs:schema>
