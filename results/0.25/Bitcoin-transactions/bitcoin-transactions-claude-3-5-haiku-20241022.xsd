<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/bitcoin-transactions"
           xmlns:tns="http://example.com/bitcoin-transactions">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        separator=""
        initiator=""
        terminator=""
        leadingSkip="0"
        trailingSkip="0"
        textTrimKind="none"
        initiatedContent="no"
        encoding="UTF-8"
        byteOrder="bigEndian"
        representation="binary"
        occursCountKind="parsed"
        textNumberRep="standard"
        escapeSchemeRef=""
        alignment="1"
        alignmentUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="BitcoinTransaction">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="Version" type="xs:int" 
          dfdl:representation="binary"
          dfdl:binaryNumberRep="binary"
          dfdl:byteOrder="littleEndian"
          dfdl:length="4"/>
        
        <xs:element name="InputCount" type="xs:int" 
          dfdl:representation="binary"
          dfdl:binaryNumberRep="binary"
          dfdl:byteOrder="littleEndian"/>
        
        <xs:element name="Inputs" dfdl:occursCountKind="expression" 
          dfdl:occursCount="{ ../InputCount }">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="PreviousTxHash" type="xs:hexBinary" 
                dfdl:length="32" 
                dfdl:representation="binary"/>
              
              <xs:element name="OutputIndex" type="xs:int" 
                dfdl:representation="binary"
                dfdl:binaryNumberRep="binary"
                dfdl:byteOrder="littleEndian"
                dfdl:length="4"/>
              
              <xs:element name="ScriptLength" type="xs:int" 
                dfdl:representation="binary"
                dfdl:binaryNumberRep="binary"/>
              
              <xs:element name="ScriptSig" type="xs:hexBinary" 
                dfdl:lengthKind="explicit"
                dfdl:length="{ ../ScriptLength }"/>
              
              <xs:element name="Sequence" type="xs:long" 
                dfdl:representation="binary"
                dfdl:binaryNumberRep="binary"
                dfdl:byteOrder="littleEndian"
                dfdl:length="4"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        
        <xs:element name="OutputCount" type="xs:int" 
          dfdl:representation="binary"
          dfdl:binaryNumberRep="binary"
          dfdl:byteOrder="littleEndian"/>
        
        <xs:element name="Outputs" dfdl:occursCountKind="expression" 
          dfdl:occursCount="{ ../OutputCount }">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Value" type="xs:long" 
                dfdl:representation="binary"
                dfdl:binaryNumberRep="binary"
                dfdl:byteOrder="littleEndian"
                dfdl:length="8"/>
              
              <xs:element name="ScriptLength" type="xs:int" 
                dfdl:representation="binary"
                dfdl:binaryNumberRep="binary"/>
              
              <xs:element name="ScriptPubKey" type="xs:hexBinary" 
                dfdl:lengthKind="explicit"
                dfdl:length="{ ../ScriptLength }"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        
        <xs:element name="LockTime" type="xs:long" 
          dfdl:representation="binary"
          dfdl:binaryNumberRep="binary"
          dfdl:byteOrder="littleEndian"
          dfdl:length="4"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>