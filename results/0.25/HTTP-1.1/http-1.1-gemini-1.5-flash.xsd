<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" targetNamespace="http://example.org/http-1.1" elementFormDefault="qualified" dfdl:textStandard="US-ASCII" dfdl:separatorSuppressPolicy="trailingEmpty" dfdl:lengthUnits="bytes">

  <xs:element name="http-1.1">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="requestLine" type="xs:string" dfdl:length="1024" dfdl:occursCount="1"/>
        <xs:element name="headers" type="headersType" dfdl:occursCount="unbounded"/>
        <xs:element name="body" type="xs:string" dfdl:occursCount="1" dfdl:lengthKind="implicit"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="headersType">
    <xs:sequence>
      <xs:element name="header" type="headerType" dfdl:occursCount="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="name" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator=":" />
      <xs:element name="value" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="\r\n" />
    </xs:sequence>
  </xs:complexType>

</xs:schema>
