<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:daf="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ns/http-1.1"
           xmlns:ex="http://example.com/ns/http-1.1"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="ex:HTTP11Format"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="HTTP11MessageType">
    <xs:sequence>
      <xs:element name="startLine" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="%NL;"/>
      <xs:element name="headers" type="ex:HeadersType" dfdl:occursCount="unbounded"/>
      <xs:element name="body" type="xs:hexBinary" dfdl:lengthKind="delimited" dfdl:terminator="%NL;"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeadersType">
    <xs:sequence>
      <xs:element name="header" type="xs:string" dfdl:lengthKind="delimited" dfdl:terminator="%NL;"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="HTTP11Message" type="ex:HTTP11MessageType"/>

  <dfdl:defineFormat name="HTTP11Format">
    <dfdl:format encoding="UTF-8" lengthKind="delimited" separator="%NL;" terminator="%NL;"/>
  </dfdl:defineFormat>

</xs:schema>