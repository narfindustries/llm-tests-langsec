<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           xmlns:gzip="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/gzip"
           elementFormDefault="qualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        separator=""
        initiator=""
        terminator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        occursCountKind="parsed"
        representation="binary"
        lengthKind="explicit"
        lengthUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="gzipFile">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="gzipHeader"/>
        <xs:element name="compressedData" type="compressedBlock"/>
        <xs:element name="footer" type="gzipFooter"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="gzipHeader">
    <xs:sequence>
      <xs:element name="magicNumber" type="xs:hexBinary">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="2" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="compressionMethod" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="1" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="flags" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="1" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="modificationTime" type="xs:unsignedInt">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="4" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="extraFlags" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="1" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="operatingSystem" type="xs:unsignedByte">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="1" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="compressedBlock">
    <xs:sequence>
      <xs:element name="compressedData" type="xs:hexBinary">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="implicit" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="gzipFooter">
    <xs:sequence>
      <xs:element name="crc32" type="xs:unsignedInt">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="4" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="originalSize" type="xs:unsignedInt">
        <xs:annotation>
          <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:element lengthKind="explicit" lengthValue="4" representation="binary"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:schema>