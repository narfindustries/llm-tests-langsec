<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/gzip"
           xmlns:tns="http://example.com/gzip"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:defaultFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="defaultFormat"
               byteOrder="bigEndian"
               encoding="utf-8"
               lengthKind="explicit"
               lengthUnits="bytes"
               occursCountKind="expression"
               occursCount="1"/>

  <xs:element name="gzip" type="tns:GzipType"/>

  <xs:complexType name="GzipType">
    <xs:sequence>
      <xs:element name="id1" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="id2" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="compressionMethod" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="flags" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="modificationTime" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="extraFlags" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="osType" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="extraField" type="xs:hexBinary" minOccurs="0" maxOccurs="1" dfdl:lengthKind="delimited" dfdl:initiator="0x00"/>
      <xs:element name="fileName" type="xs:string" minOccurs="0" maxOccurs="1" dfdl:lengthKind="delimited" dfdl:terminator="0x00"/>
      <xs:element name="comment" type="xs:string" minOccurs="0" maxOccurs="1" dfdl:lengthKind="delimited" dfdl:terminator="0x00"/>
      <xs:element name="crc16" type="xs:unsignedShort" minOccurs="0" maxOccurs="1" dfdl:length="2"/>
      <xs:element name="compressedData" type="xs:hexBinary" dfdl:lengthKind="delimited" dfdl:terminator="0x00"/>
      <xs:element name="crc32" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="isize" type="xs:unsignedInt" dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>