<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/pngImage"
           xmlns="http://example.org/pngImage"
           elementFormDefault="qualified">

  <xs:element name="PNGImage">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" dfdl:length="8" dfdl:occursCount="1"/>
        <xs:element name="width" type="xs:unsignedInt" dfdl:lengthKind="explicit" dfdl:length="4"/>
        <xs:element name="height" type="xs:unsignedInt" dfdl:lengthKind="explicit" dfdl:length="4"/>
        <xs:element name="imageData" type="xs:hexBinary" dfdl:lengthKind="implicit" dfdl:lengthUnits="bytes" dfdl:representation="binary"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:simpleContent>
      <xs:extension base="xs:hexBinary">
        <xs:attribute name="version" type="xs:string" use="required" dfdl:occursCount="1"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

</xs:schema>
