<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/png"
           xmlns:tns="http://example.com/png">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:element name="PNG" dfdl:lengthKind="delimited">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Signature" type="xs:hexBinary" dfdl:length="8" dfdl:encoding="hexBinary" dfdl:initiator="89504E470D0A1A0A"/>
        <xs:element name="Chunks" type="tns:ChunksType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="ChunksType">
    <xs:sequence dfdl:separatorSuppressionPolicy="never">
      <xs:element name="Chunk" type="tns:ChunkType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ChunkType">
    <xs:sequence>
      <xs:element name="Length" type="xs:int" dfdl:length="4" dfdl:byteOrder="bigEndian"/>
      <xs:element name="Type" type="xs:string" dfdl:length="4" dfdl:encoding="ascii"/>
      <xs:element name="Data" type="xs:hexBinary" dfdl:lengthKind="explicit" dfdl:length="{../tns:Length}"/>
      <xs:element name="CRC" type="xs:hexBinary" dfdl:length="4" dfdl:byteOrder="bigEndian"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>