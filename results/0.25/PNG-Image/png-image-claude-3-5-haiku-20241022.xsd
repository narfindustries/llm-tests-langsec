<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/png"
           xmlns:tns="http://example.com/png">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        representation="binary"
        alignmentUnits="bytes"
        alignment="1"
        byteOrder="bigEndian"
        bitOrder="mostSignificantBitFirst"
        encoding="UTF-8"
        fillByte="%#x00"
        escapeSchemeRef=""
        initiatedContent="no"
        lengthKind="explicit"
        lengthUnits="bytes"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="PNGImage">
    <xs:complexType>
      <xs:sequence dfdl:separator="">
        <xs:element name="Signature" type="tns:SignatureType"/>
        <xs:element name="Header" type="tns:HeaderType"/>
        <xs:element name="Chunks" type="tns:ChunksType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="SignatureType">
    <xs:sequence dfdl:separator="">
      <xs:element name="SignatureBytes" type="xs:hexBinary" 
        dfdl:lengthKind="explicit" 
        dfdl:length="8"
        dfdl:initiator="0x89504E470D0A1A0A"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="HeaderType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Length" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
      <xs:element name="ChunkType" type="xs:string" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"
        dfdl:encoding="ASCII"/>
      <xs:element name="Width" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
      <xs:element name="Height" type="xs:unsignedInt" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
      <xs:element name="BitDepth" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="ColorType" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="CompressionMethod" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="FilterMethod" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="InterlaceMethod" type="xs:unsignedByte" 
        dfdl:lengthKind="explicit" 
        dfdl:length="1"/>
      <xs:element name="CRC" type="xs:hexBinary" 
        dfdl:lengthKind="explicit" 
        dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ChunksType">
    <xs:sequence dfdl:separator="">
      <xs:element name="Chunk" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence dfdl:separator="">
            <xs:element name="Length" type="xs:unsignedInt" 
              dfdl:lengthKind="explicit" 
              dfdl:length="4"/>
            <xs:element name="ChunkType" type="xs:string" 
              dfdl:lengthKind="explicit" 
              dfdl:length="4"
              dfdl:encoding="ASCII"/>
            <xs:element name="ChunkData" type="xs:hexBinary" 
              dfdl:lengthKind="explicit" 
              dfdl:length="{ ../Length }"/>
            <xs:element name="CRC" type="xs:hexBinary" 
              dfdl:lengthKind="explicit" 
              dfdl:length="4"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

</xs:schema>