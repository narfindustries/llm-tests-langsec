<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/elf"
           xmlns:elf="http://example.com/elf">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        separator=""
        initiator=""
        terminator=""
        encoding="UTF-8"
        byteOrder="bigEndian"
        alignment="1"
        alignmentUnits="bytes"
        fillByte="%#r00"
        occursCountKind="parsed"
        representation="binary"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="ELFFile">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" type="elf:ELFHeaderType"/>
        <xs:element name="ProgramHeaders" type="elf:ProgramHeadersType"/>
        <xs:element name="SectionHeaders" type="elf:SectionHeadersType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="ELFHeaderType">
    <xs:sequence>
      <xs:element name="Magic" type="elf:MagicType"/>
      <xs:element name="Class" type="xs:unsignedByte"/>
      <xs:element name="DataEncoding" type="xs:unsignedByte"/>
      <xs:element name="Version" type="xs:unsignedByte"/>
      <xs:element name="OSABI" type="xs:unsignedByte"/>
      <xs:element name="ABIVersion" type="xs:unsignedByte"/>
      <xs:element name="Padding" type="elf:PaddingType"/>
      <xs:element name="Type" type="xs:unsignedShort"/>
      <xs:element name="Machine" type="xs:unsignedShort"/>
      <xs:element name="ELFVersion" type="xs:unsignedInt"/>
      <xs:element name="EntryPoint" type="xs:unsignedLong"/>
      <xs:element name="ProgramHeaderOffset" type="xs:unsignedLong"/>
      <xs:element name="SectionHeaderOffset" type="xs:unsignedLong"/>
      <xs:element name="Flags" type="xs:unsignedInt"/>
      <xs:element name="HeaderSize" type="xs:unsignedShort"/>
      <xs:element name="ProgramHeaderEntrySize" type="xs:unsignedShort"/>
      <xs:element name="ProgramHeaderCount" type="xs:unsignedShort"/>
      <xs:element name="SectionHeaderEntrySize" type="xs:unsignedShort"/>
      <xs:element name="SectionHeaderCount" type="xs:unsignedShort"/>
      <xs:element name="SectionHeaderStringIndex" type="xs:unsignedShort"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="MagicType">
    <xs:sequence>
      <xs:element name="Byte" type="xs:unsignedByte" maxOccurs="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PaddingType">
    <xs:sequence>
      <xs:element name="Byte" type="xs:unsignedByte" maxOccurs="7"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ProgramHeadersType">
    <xs:sequence>
      <xs:element name="ProgramHeader" type="elf:ProgramHeaderType" 
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ProgramHeaderType">
    <xs:sequence>
      <xs:element name="Type" type="xs:unsignedInt"/>
      <xs:element name="Offset" type="xs:unsignedLong"/>
      <xs:element name="VirtualAddress" type="xs:unsignedLong"/>
      <xs:element name="PhysicalAddress" type="xs:unsignedLong"/>
      <xs:element name="FileSize" type="xs:unsignedLong"/>
      <xs:element name="MemorySize" type="xs:unsignedLong"/>
      <xs:element name="Flags" type="xs:unsignedInt"/>
      <xs:element name="Alignment" type="xs:unsignedLong"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SectionHeadersType">
    <xs:sequence>
      <xs:element name="SectionHeader" type="elf:SectionHeaderType" 
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SectionHeaderType">
    <xs:sequence>
      <xs:element name="NameIndex" type="xs:unsignedInt"/>
      <xs:element name="Type" type="xs:unsignedInt"/>
      <xs:element name="Flags" type="xs:unsignedLong"/>
      <xs:element name="Address" type="xs:unsignedLong"/>
      <xs:element name="Offset" type="xs:unsignedLong"/>
      <xs:element name="Size" type="xs:unsignedLong"/>
      <xs:element name="Link" type="xs:unsignedInt"/>
      <xs:element name="Info" type="xs:unsignedInt"/>
      <xs:element name="AddressAlignment" type="xs:unsignedLong"/>
      <xs:element name="EntrySize" type="xs:unsignedLong"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>