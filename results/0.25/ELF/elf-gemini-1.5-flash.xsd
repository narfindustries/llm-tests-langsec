<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/elf_gemini"
           xmlns="http://example.org/elf_gemini"
           elementFormDefault="qualified">

  <xs:element name="elf_gemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" dfdl:lengthKind="explicit" dfdl:length="16"/>
        <xs:element name="data" type="dataType" dfdl:lengthKind="implicit" dfdl:occursCountKind="implicit"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="version" type="xs:string" dfdl:length="4"/>
      <xs:element name="timestamp" type="xs:long" dfdl:length="8"/>
      <xs:element name="checksum" type="xs:unsignedInt" dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="dataType">
    <xs:sequence>
      <xs:element name="record" type="recordType" maxOccurs="unbounded" dfdl:separator=","/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="recordType">
    <xs:sequence>
      <xs:element name="id" type="xs:int" dfdl:length="4"/>
      <xs:element name="value" type="xs:double" dfdl:length="8"/>
    </xs:sequence>
  </xs:complexType>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:defineSchemaVersion scv="1.0"/>
      <dfdl:format binary="true"/>
      <dfdl:textStandardEncoding utf8="true"/>
      <dfdl:representation representation="binary"/>
      <dfdl:encoding encoding="UTF-8"/>
      <dfdl:byteOrder byteOrder="bigEndian"/>
      <dfdl:alignment alignmentUnits="bytes" alignment="1"/>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>
