<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ELF"
           xmlns:tns="http://example.com/ELF"
           elementFormDefault="qualified"
           dfdl:format="true">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:ELFFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <dfdl:format name="ELFFormat"
               byteOrder="bigEndian"
               encoding="utf-8"
               lengthKind="explicit"
               lengthUnits="bytes"
               alignmentUnits="bytes"/>

  <xs:element name="ELFFile" type="tns:ELFFileType"/>

  <xs:complexType name="ELFFileType">
    <xs:sequence>
      <xs:element name="Header" type="tns:ELFHeaderType"/>
      <xs:element name="ProgramHeaders" type="tns:ProgramHeadersType" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="SectionHeaders" type="tns:SectionHeadersType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ELFHeaderType">
    <xs:sequence>
      <xs:element name="Magic" type="xs:hexBinary" dfdl:length="4"/>
      <xs:element name="Class" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="Data" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="Version" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="OSABI" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="ABIVersion" type="xs:unsignedByte" dfdl:length="1"/>
      <xs:element name="Padding" type="xs:hexBinary" dfdl:length="7"/>
      <xs:element name="Type" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="Machine" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="Version2" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="EntryPoint" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="ProgramHeaderOffset" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="SectionHeaderOffset" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Flags" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="HeaderSize" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="ProgramHeaderEntrySize" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="ProgramHeaderEntryCount" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="SectionHeaderEntrySize" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="SectionHeaderEntryCount" type="xs:unsignedShort" dfdl:length="2"/>
      <xs:element name="SectionHeaderStringIndex" type="xs:unsignedShort" dfdl:length="2"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ProgramHeadersType">
    <xs:sequence>
      <xs:element name="ProgramHeader" type="tns:ProgramHeaderType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ProgramHeaderType">
    <xs:sequence>
      <xs:element name="Type" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Offset" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="VirtualAddress" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="PhysicalAddress" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="FileSize" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="MemorySize" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Flags" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Align" type="xs:unsignedInt" dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SectionHeadersType">
    <xs:sequence>
      <xs:element name="SectionHeader" type="tns:SectionHeaderType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="SectionHeaderType">
    <xs:sequence>
      <xs:element name="Name" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Type" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Flags" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Address" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Offset" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Size" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Link" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="Info" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="AddressAlign" type="xs:unsignedInt" dfdl:length="4"/>
      <xs:element name="EntrySize" type="xs:unsignedInt" dfdl:length="4"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>