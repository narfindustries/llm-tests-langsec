<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="urn:network-time-protocol-v4"
           xmlns:ntp="urn:network-time-protocol-v4">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format
        alignmentUnits="bytes"
        alignment="1"
        leadingSkip="0"
        trailingSkip="0"
        initiator=""
        terminator=""
        separator=""
        separatorPosition="infix"
        separatorPolicy="suppressed"
        representation="binary"
        encoding="US-ASCII"
        byteOrder="bigEndian"
        binaryNumberRep="binary"
        escapeSchemeRef=""
        occursCountKind="parsed"
        textNumberRep="standard"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="NTPPacket" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="LeapIndicator" type="xs:unsignedByte" 
          dfdl:length="2" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="VersionNumber" type="xs:unsignedByte" 
          dfdl:length="3" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="Mode" type="xs:unsignedByte" 
          dfdl:length="3" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="Stratum" type="xs:unsignedByte" 
          dfdl:length="8" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="PollInterval" type="xs:byte" 
          dfdl:length="8" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="Precision" type="xs:byte" 
          dfdl:length="8" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="RootDelay" type="xs:int" 
          dfdl:length="32" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="RootDispersion" type="xs:int" 
          dfdl:length="32" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="ReferenceIdentifier" type="xs:string" 
          dfdl:length="32" 
          dfdl:lengthKind="explicit" 
          dfdl:encoding="ASCII"/>
        
        <xs:element name="ReferenceTimestamp" type="xs:double" 
          dfdl:length="64" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="OriginTimestamp" type="xs:double" 
          dfdl:length="64" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="ReceiveTimestamp" type="xs:double" 
          dfdl:length="64" 
          dfdl:lengthKind="explicit"/>
        
        <xs:element name="TransmitTimestamp" type="xs:double" 
          dfdl:length="64" 
          dfdl:lengthKind="explicit"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>