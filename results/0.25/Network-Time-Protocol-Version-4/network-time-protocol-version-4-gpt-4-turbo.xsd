<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ntp"
           xmlns:tns="http://example.com/ntp">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:defaultFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="NTPPacket">
    <xs:sequence>
      <xs:element name="leapIndicator" type="xs:int" dfdl:length="2" dfdl:lengthKind="explicit"/>
      <xs:element name="versionNumber" type="xs:int" dfdl:length="3" dfdl:lengthKind="explicit"/>
      <xs:element name="mode" type="xs:int" dfdl:length="3" dfdl:lengthKind="explicit"/>
      <xs:element name="stratum" type="xs:int" dfdl:length="8" dfdl:lengthKind="explicit"/>
      <xs:element name="poll" type="xs:int" dfdl:length="8" dfdl:lengthKind="explicit"/>
      <xs:element name="precision" type="xs:int" dfdl:length="8" dfdl:lengthKind="explicit"/>
      <xs:element name="rootDelay" type="xs:int" dfdl:length="32" dfdl:lengthKind="explicit"/>
      <xs:element name="rootDispersion" type="xs:int" dfdl:length="32" dfdl:lengthKind="explicit"/>
      <xs:element name="referenceIdentifier" type="xs:string" dfdl:length="32" dfdl:lengthKind="explicit"/>
      <xs:element name="referenceTimestamp" type="xs:long" dfdl:length="64" dfdl:lengthKind="explicit"/>
      <xs:element name="originateTimestamp" type="xs:long" dfdl:length="64" dfdl:lengthKind="explicit"/>
      <xs:element name="receiveTimestamp" type="xs:long" dfdl:length="64" dfdl:lengthKind="explicit"/>
      <xs:element name="transmitTimestamp" type="xs:long" dfdl:length="64" dfdl:lengthKind="explicit"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="NTPPacket" type="tns:NTPPacket"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="defaultFormat">
        <dfdl:format byteOrder="bigEndian"
                     binaryNumberRep="binary"
                     bitOrder="mostSignificantBitFirst"
                     encoding="UTF-8"
                     lengthKind="delimited"
                     textNumberRep="standard"/>
      </dfdl:defineFormat>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>