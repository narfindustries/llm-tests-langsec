<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/ntp"
           xmlns:tns="http://example.com/ntp"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="tns:ntpFormat"/>
        </xs:appinfo>
    </xs:annotation>

    <dfdl:format name="ntpFormat"
                 byteOrder="bigEndian"
                 encoding="ascii"
                 lengthKind="explicit"
                 lengthUnits="bytes"/>

    <xs:element name="NTPMessage">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="LI_VN_Mode" type="xs:unsignedByte" dfdl:length="1" dfdl:representation="binary"/>
                <xs:element name="Stratum" type="xs:unsignedByte" dfdl:length="1" dfdl:representation="binary"/>
                <xs:element name="Poll" type="xs:unsignedByte" dfdl:length="1" dfdl:representation="binary"/>
                <xs:element name="Precision" type="xs:byte" dfdl:length="1" dfdl:representation="binary"/>
                <xs:element name="RootDelay" type="xs:unsignedInt" dfdl:length="4" dfdl:representation="binary"/>
                <xs:element name="RootDispersion" type="xs:unsignedInt" dfdl:length="4" dfdl:representation="binary"/>
                <xs:element name="ReferenceID" type="xs:unsignedInt" dfdl:length="4" dfdl:representation="binary"/>
                <xs:element name="ReferenceTimestamp" type="xs:unsignedLong" dfdl:length="8" dfdl:representation="binary"/>
                <xs:element name="OriginateTimestamp" type="xs:unsignedLong" dfdl:length="8" dfdl:representation="binary"/>
                <xs:element name="ReceiveTimestamp" type="xs:unsignedLong" dfdl:length="8" dfdl:representation="binary"/>
                <xs:element name="TransmitTimestamp" type="xs:unsignedLong" dfdl:length="8" dfdl:representation="binary"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>