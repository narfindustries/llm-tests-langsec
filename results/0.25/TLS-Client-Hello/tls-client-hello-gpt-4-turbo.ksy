meta:
  id: tls_client_hello
  title: TLS Client Hello
  file-extension: tls
  endian: be
  license: CC0-1.0
  ks-version: 0.9

doc: |
  The TLS Client Hello message, sent by the client to initiate the TLS handshake process.

seq:
  - id: record_type
    type: u1
    enum: tls_record_type
    doc: The type of the TLS record.

  - id: version
    type: tls_version
    doc: The version of the TLS protocol.

  - id: length
    type: u2
    doc: Length of the following TLS payload.

  - id: handshake_type
    type: u1
    enum: tls_handshake_type
    doc: Type of the handshake message.

  - id: handshake_length
    type: u3
    doc: Length of the handshake message.

  - id: handshake_version
    type: tls_version
    doc: The version of the TLS protocol used in the handshake.

  - id: random
    size: 32
    doc: Random bytes generated by the client.

  - id: session_id
    type: tls_length_value
    doc: Session identifier.

  - id: cipher_suites
    type: tls_length_value
    doc: List of cipher suites supported by the client.

  - id: compression_methods
    type: tls_length_value
    doc: List of compression methods supported by the client.

  - id: extensions
    type: tls_length_value
    doc: Optional extensions.

types:
  tls_version:
    seq:
      - id: major
        type: u1
      - id: minor
        type: u1

  tls_length_value:
    seq:
      - id: length
        type: u1
      - id: value
        size: length

enums:
  tls_record_type:
    0x16: handshake

  tls_handshake_type:
    0x01: client_hello