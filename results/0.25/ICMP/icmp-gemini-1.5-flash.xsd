    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DataType">
    <xs:sequence>
      <xs:element name="data_bytes" type="xs:hexBinary" minOccurs="0" maxOccurs="unbounded">
          <xs:annotation>
              <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
                  <dfdl:lengthKind>implicit</dfdl:lengthKind>
              </xs:appinfo>
          </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

