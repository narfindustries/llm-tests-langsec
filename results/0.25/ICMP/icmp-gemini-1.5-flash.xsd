      <xs:element name="type" type="xs:byte">
          <xs:annotation>
              <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
                  <dfdl:byteOrder>bigEndian</dfdl:byteOrder>
              </xs:appinfo>
          </xs:annotation>
      </xs:element>
      <xs:element name="code" type="xs:byte">
          <xs:annotation>
