<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/icmp"
           xmlns:icmp="http://example.com/icmp"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format 
        alignBoundary="8" 
        alignment="8" 
        bitOrder="mostSignificantBitFirst" 
        byteOrder="bigEndian"
        encoding="ASCII"
        escapeSchemeRef=""
        fillByte="%#r20;"
        initiator=""
        lengthKind="explicit"
        lengthUnits="bits"
        separator=""
        separatorPolicy="suppressedAtEndLevelOnly"
        textNumberCheckPolicy="strict"
        textNumberPattern=""
        textStandardBase="10"
        textStandardDecimalSeparator="."
        textStandardGroupingSeparator=","
        textZonedSignStyle="asciiStandard"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:element name="ICMPPacket" dfdl:lengthKind="implicit">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Type" type="xs:unsignedByte" 
          dfdl:lengthKind="explicit" 
          dfdl:length="8" 
          dfdl:representation="binary"/>
        
        <xs:element name="Code" type="xs:unsignedByte" 
          dfdl:lengthKind="explicit" 
          dfdl:length="8" 
          dfdl:representation="binary"/>
        
        <xs:element name="Checksum" type="xs:unsignedShort" 
          dfdl:lengthKind="explicit" 
          dfdl:length="16" 
          dfdl:representation="binary"/>
        
        <xs:element name="RestOfHeader" type="xs:hexBinary" 
          dfdl:lengthKind="explicit" 
          dfdl:length="32" 
          dfdl:representation="binary"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>