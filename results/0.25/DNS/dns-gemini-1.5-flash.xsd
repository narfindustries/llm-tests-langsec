<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/dns"
           xmlns="http://example.org/dns"
           elementFormDefault="qualified">

  <xs:element name="dnsGemini">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="header" type="headerType" dfdl:occursCountKind="exactlyOne"/>
        <xs:element name="records" type="recordsType" dfdl:occursCountKind="exactlyOne"/>
      </xs:sequence>
      <xs:attribute name="version" type="xs:string" use="required" dfdl:length="1"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="headerType">
    <xs:sequence>
      <xs:element name="timestamp" type="xs:dateTime" dfdl:length="20"/>
      <xs:element name="source" type="xs:string" dfdl:length="10"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="recordsType">
    <xs:sequence>
      <xs:element name="record" type="recordType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="recordType">
    <xs:sequence>
      <xs:element name="name" type="xs:string" dfdl:length="255"/>
      <xs:element name="type" type="xs:integer" dfdl:length="2"/>
      <xs:element name="ttl" type="xs:integer" dfdl:length="4"/>
      <xs:element name="data" type="xs:string" dfdl:lengthKind="variable" dfdl:length="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <dfdl:defineSchema>
    <dfdl:textStandard>
      <dfdl:representation>text</dfdl:representation>
      <dfdl:encoding>UTF-8</dfdl:encoding>
    </dfdl:textStandard>
    <dfdl:lengthUnits>bytes</dfdl:lengthUnits>
    <dfdl:binaryNumberRep>binary</dfdl:binaryNumberRep>
  </dfdl:defineSchema>

</xs:schema>
