<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.org/hl7v2"
           xmlns="http://example.org/hl7v2"
           elementFormDefault="qualified">

  <xs:element name="HL7Message">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="MSH" type="MSHType"/>
        <xs:element name="OtherSegments" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:any namespace="##any" processContents="lax"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="MSHType">
    <xs:sequence>
      <xs:element name="Field1" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field2" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field3" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field4" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field5" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field6" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field7" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field8" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field9" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field10" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field11" type="xs:string" dfdl:length="3"/>
      <xs:element name="Field12" type="xs:string" dfdl:length="3"/>
    </xs:sequence>
    <xs:attribute name="encoding" type="xs:string" use="required" dfdl:occurs="1"/>
  </xs:complexType>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:defineSchema>
        <dfdl:format ref="HL7v2"/>
      </dfdl:defineSchema>
    </xs:appinfo>
  </xs:annotation>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/dfdl-1.0/">
      <dfdl:format name="HL7v2">
        <dfdl:textStandardEncoding>UTF-8</dfdl:textStandardEncoding>
        <dfdl:separator separator="|" />
        <dfdl:lengthKind>byteLength</dfdl:lengthKind>
        <dfdl:representation>text</dfdl:representation>
      </dfdl:format>
    </xs:appinfo>
  </xs:annotation>

</xs:schema>
