<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:gif="http://example.com/gif"
    targetNamespace="http://example.com/gif"
    elementFormDefault="qualified">

    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format alignment="1" alignmentUnits="bytes"
                binaryNumberRep="binary"
                byteOrder="littleEndian"
                representation="binary"
                occursCountKind="implicit"
                lengthKind="implicit"
                encoding="UTF-8"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="gif">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="header">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="signature" type="xs:string" dfdl:length="3" dfdl:lengthKind="explicit"/>
                            <xs:element name="version" type="xs:string" dfdl:length="3" dfdl:lengthKind="explicit"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name="logicalScreenDescriptor">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="width" type="xs:unsignedShort"/>
                            <xs:element name="height" type="xs:unsignedShort"/>
                            <xs:element name="packedFields" type="xs:unsignedByte"/>
                            <xs:element name="backgroundColorIndex" type="xs:unsignedByte"/>
                            <xs:element name="pixelAspectRatio" type="xs:unsignedByte"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="globalColorTable" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence dfdl:byteOrder="bigEndian">
                            <xs:element name="rgb" maxOccurs="256">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="red" type="xs:unsignedByte"/>
                                        <xs:element name="green" type="xs:unsignedByte"/>
                                        <xs:element name="blue" type="xs:unsignedByte"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="blocks" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:choice>
                            <xs:element name="graphicControlExtension">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="introducer" type="xs:unsignedByte" dfdl:outputValueCalc="0x21"/>
                                        <xs:element name="label" type="xs:unsignedByte" dfdl:outputValueCalc="0xF9"/>
                                        <xs:element name="blockSize" type="xs:unsignedByte" dfdl:outputValueCalc="4"/>
                                        <xs:element name="packedFields" type="xs:unsignedByte"/>
                                        <xs:element name="delayTime" type="xs:unsignedShort"/>
                                        <xs:element name="transparentColorIndex" type="xs:unsignedByte"/>
                                        <xs:element name="terminator" type="xs:unsignedByte" dfdl:outputValueCalc="0"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>

                            <xs:element name="imageDescriptor">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="separator" type="xs:unsignedByte" dfdl:outputValueCalc="0x2C"/>
                                        <xs:element name="imageLeft" type="xs:unsignedShort"/>
                                        <xs:element name="imageTop" type="xs:unsignedShort"/>
                                        <xs:element name="imageWidth" type="xs:unsignedShort"/>
                                        <xs:element name="imageHeight" type="xs:unsignedShort"/>
                                        <xs:element name="packedFields" type="xs:unsignedByte"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>

                            <xs:element name="applicationExtension">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="introducer" type="xs:unsignedByte" dfdl:outputValueCalc="0x21"/>
                                        <xs:element name="label" type="xs:unsignedByte" dfdl:outputValueCalc="0xFF"/>
                                        <xs:element name="blockSize" type="xs:unsignedByte" dfdl:outputValueCalc="11"/>
                                        <xs:element name="identifier" type="xs:string" dfdl:length="8" dfdl:lengthKind="explicit"/>
                                        <xs:element name="authCode" type="xs:string" dfdl:length="3" dfdl:lengthKind="explicit"/>
                                        <xs:element name="applicationData" type="xs:hexBinary" dfdl:lengthKind="delimited"/>
                                        <xs:element name="terminator" type="xs:unsignedByte" dfdl:outputValueCalc="0"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:choice>
                    </xs:complexType>
                </xs:element>

                <xs:element name="trailer" type="xs:unsignedByte" dfdl:outputValueCalc="0x3B"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>