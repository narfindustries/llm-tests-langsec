<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
           targetNamespace="http://example.com/dfdl/tiff"
           xmlns:tns="http://example.com/dfdl/tiff">

  <xs:include schemaLocation="DFDLGeneralFormat.xsd"/>

  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="tns:GeneralFormat"/>
    </xs:appinfo>
  </xs:annotation>

  <xs:complexType name="TIFFHeader">
    <xs:sequence>
      <xs:element name="byteOrder" type="xs:string" dfdl:length="2" dfdl:encoding="US-ASCII" dfdl:initiator="II" dfdl:terminator="MM"/>
      <xs:element name="magicNumber" type="xs:int" dfdl:length="2" dfdl:binaryNumberRep="binary"/>
      <xs:element name="offsetFirstIFD" type="xs:int" dfdl:length="4" dfdl:binaryNumberRep="binary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="TIFFFile" type="tns:TIFFHeader"/>

</xs:schema>