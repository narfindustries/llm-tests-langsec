<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
    xmlns:fn="http://www.w3.org/2005/xpath-functions"
    xmlns:daf="urn:ogf:dfdl:2013:imp:daffodil.apache.org:2018:ext"
    xmlns:local="http://example.com/zip"
    targetNamespace="http://example.com/zip">
    
    <xs:annotation>
        <xs:appinfo source="http://www.ogf.org/dfdl/">
            <dfdl:format ref="dfdl:GeneralFormat" representation="binary"
                binaryNumberRep="binary"
                byteOrder="littleEndian"
                alignmentUnits="bytes"
                lengthUnits="bytes"
                encoding="utf-8"/>
        </xs:appinfo>
    </xs:annotation>

    <xs:element name="zipFile">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="localFileHeader" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="signature" type="xs:unsignedInt" dfdl:length="4" dfdl:outputValueCalc="0x04034b50"/>
                            <xs:element name="version" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="flags" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="compressionMethod" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="lastModTime" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="lastModDate" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="crc32" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="compressedSize" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="uncompressedSize" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="fileNameLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="extraFieldLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="fileName" type="xs:string" dfdl:length="{ ../fileNameLength }"/>
                            <xs:element name="extraField" type="xs:hexBinary" dfdl:length="{ ../extraFieldLength }" minOccurs="0"/>
                            <xs:element name="fileData" type="xs:hexBinary" dfdl:length="{ ../compressedSize }"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="centralDirectory" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="signature" type="xs:unsignedInt" dfdl:length="4" dfdl:outputValueCalc="0x02014b50"/>
                            <xs:element name="versionMadeBy" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="versionNeeded" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="flags" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="compressionMethod" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="lastModTime" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="lastModDate" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="crc32" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="compressedSize" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="uncompressedSize" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="fileNameLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="extraFieldLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="fileCommentLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="diskNumberStart" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="internalFileAttributes" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="externalFileAttributes" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="relativeOffset" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="fileName" type="xs:string" dfdl:length="{ ../fileNameLength }"/>
                            <xs:element name="extraField" type="xs:hexBinary" dfdl:length="{ ../extraFieldLength }" minOccurs="0"/>
                            <xs:element name="fileComment" type="xs:string" dfdl:length="{ ../fileCommentLength }" minOccurs="0"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="endOfCentralDirectory">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="signature" type="xs:unsignedInt" dfdl:length="4" dfdl:outputValueCalc="0x06054b50"/>
                            <xs:element name="diskNumber" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="centralDirectoryDisk" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="diskEntryCount" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="totalEntryCount" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="centralDirectorySize" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="centralDirectoryOffset" type="xs:unsignedInt" dfdl:length="4"/>
                            <xs:element name="commentLength" type="xs:unsignedShort" dfdl:length="2"/>
                            <xs:element name="comment" type="xs:string" dfdl:length="{ ../commentLength }" minOccurs="0"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>